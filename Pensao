    <script type="module">
        // Inicializa os √≠cones
        lucide.createIcons();

        // Elementos da UI
        const vendaForm = document.getElementById('vendaForm');
        const valorVendaInput = document.getElementById('valorVenda');
        const numeroComandaAInput = document.getElementById('numeroComandaA');
        const numeroComandaBInput = document.getElementById('numeroComandaB');
        const tipoPagamentoRadios = document.querySelectorAll('input[name="tipoPagamento"]');
        const campoClienteFiado = document.getElementById('campoClienteFiado');
        const nomeClienteFiadoInput = document.getElementById('nomeClienteFiado');
        const telefoneClienteFiadoInput = document.getElementById('telefoneClienteFiado'); 
        const resetarDiaBtn = document.getElementById('resetarDiaBtn');
        
        // Elementos de Configura√ß√£o ATUALIZADOS
        const inicioComandaAInput = document.getElementById('inicioComandaA'); 
        const finalComandaAInput = document.getElementById('finalComandaA'); 
        const inicioComandaBInput = document.getElementById('inicioComandaB'); 
        const finalComandaBInput = document.getElementById('finalComandaB'); 
        
        const salvarConfigComandasBtn = document.getElementById('salvarConfigComandasBtn'); 
        const trocoInicialInput = document.getElementById('trocoInicialInput');
        
        // Displays de resumo
        const totalVendasHojeEl = document.getElementById('totalVendasHoje');
        const totalDinheiroEl = document.getElementById('totalDinheiro');
        const totalCartaoEl = document.getElementById('totalCartao');
        const totalPixEl = document.getElementById('totalPix');
        const totalFiadoHojeEl = document.getElementById('totalFiadoHoje');
        const totalPagamentosFiadoHojeEl = document.getElementById('totalPagamentosFiadoHoje');
        const totalCaixaDinheiroEl = document.getElementById('totalCaixaDinheiro');
        
        // Se√ß√£o de Fiado
        const listaClientesFiadoEl = document.getElementById('listaClientesFiado');
        const totalFiadoGeralEl = document.getElementById('totalFiadoGeral');

        // Se√ß√£o de Vendas do Dia
        const listaVendasHojeEl = document.getElementById('listaVendasHoje');
        const comandasRegistradasEl = document.getElementById('comandasRegistradas');

        // NOVO: Se√ß√£o Cadastro de Clientes
        const addClienteForm = document.getElementById('addClienteForm');
        const nomeClienteCadastroInput = document.getElementById('nomeClienteCadastro');
        const telefoneClienteCadastroInput = document.getElementById('telefoneClienteCadastro');
        const listaClientesCadastradosEl = document.getElementById('listaClientesCadastrados');

        // Se√ß√£o de Hist√≥rico e Backup
        const seletorData = document.getElementById('seletorData');
        const relatorioContainer = document.getElementById('relatorioContainer');
        const exportarDadosBtn = document.getElementById('exportarDadosBtn');
        const importarBtn = document.getElementById('importarBtn');
        const importarDadosInput = document.getElementById('importarDadosInput');
        const limparHistoricoBtn = document.getElementById('limparHistoricoBtn'); 

        // Relat√≥rio Acumulado
        const dataInicioInput = document.getElementById('dataInicio');
        const dataFimInput = document.getElementById('dataFim');
        const calcularPeriodoBtn = document.getElementById('calcularPeriodoBtn');
        const relatorioAcumuladoContainer = document.getElementById('relatorioAcumuladoContainer');

        // Modal de Senha
        const senhaModal = document.getElementById('senhaModal');
        const senhaModalMensagem = document.getElementById('senhaModalMensagem');
        const senhaInput = document.getElementById('senhaInput');
        const cancelarSenhaBtn = document.getElementById('cancelarSenhaBtn');
        const confirmarSenhaBtn = document.getElementById('confirmarSenhaBtn');

        // Modal de Hist√≥rico Fiado
        const historicoFiadoModal = document.getElementById('historicoFiadoModal');
        const historicoFiadoModalClose = document.getElementById('historicoFiadoModalClose');
        const historicoFiadoModalTitulo = document.getElementById('historicoFiadoModalTitulo');
        const historicoFiadoModalConteudo = document.getElementById('historicoFiadoModalConteudo');


        // --- L√ìGICA DE DADOS ---
        const SENHA_ADMIN = 'admin123';
        let acaoPendenteComSenha = null; // Armazena a fun√ß√£o a ser executada

        // Fun√ß√£o de Limpeza de Telefone
        const limparTelefone = (tel) => (tel || '').replace(/\D/g, '');

        const migrarEstruturaFiado = (dadosFiado) => {
            const fiadoMigrado = {};
            for (const chave in dadosFiado) {
                const dados = dadosFiado[chave];
                
                if (dados && typeof dados === 'object') {
                    // Tenta extrair telefone da chave ou do objeto, e limpa
                    const telLimpo = limparTelefone(dados.telefone || (chave.match(/^[0-9() -]+$/) ? chave : ''));
                    const chaveMigrada = telLimpo || chave; // Chave prim√°ria agora √© o telefone limpo, se existir

                    if (dados.hasOwnProperty('transacoes')) {
                        fiadoMigrado[chaveMigrada] = { ...dados, telefone: telLimpo };
                    } else if (dados.hasOwnProperty('divida')) {
                        fiadoMigrado[chaveMigrada] = {
                            nome: dados.nome || (telLimpo ? '(Sem Nome)' : chave),
                            telefone: telLimpo,
                            transacoes: [
                                { data: new Date().toISOString(), tipo: 'importado', valor: dados.divida, comanda: 'SALDO ANTERIOR' }
                            ]
                        };
                    }
                } else if (typeof dados === 'number') {
                    fiadoMigrado[chave] = {
                        nome: chave, 
                        telefone: '', 
                        transacoes: [
                             { data: new Date().toISOString(), tipo: 'importado', valor: dados, comanda: 'SALDO ANTERIOR' }
                        ]
                    };
                }
            }
            return fiadoMigrado;
        };
        
        // NOVO: Migra clientes do fiado para o cadastro geral (executa uma vez)
        const migrarClientesParaCadastro = (clientesFiado, cadastroClientes) => {
            let cadastroAtualizado = { ...cadastroClientes };
            let cadastroMudou = false;
            for (const telLimpo in clientesFiado) {
                if (telLimpo && !cadastroAtualizado[telLimpo]) { // Adiciona se n√£o existir
                    cadastroAtualizado[telLimpo] = {
                        nome: clientesFiado[telLimpo].nome || '(Sem Nome)',
                        telefone: telLimpo // O telefone j√° √© a chave limpa
                    };
                    cadastroMudou = true;
                }
            }
            return { cadastro: cadastroAtualizado, mudou: cadastroMudou };
        };


        // Carrega os dados do localStorage ou inicializa com valores padr√£o
        let vendasHoje = JSON.parse(localStorage.getItem('vendasHoje')) || [];
        let clientesFiadoBruto = JSON.parse(localStorage.getItem('clientesFiado')) || {};
        let clientesFiado = migrarEstruturaFiado(clientesFiadoBruto); 
        // NOVO: Carrega cadastro de clientes
        let cadastroClientes = JSON.parse(localStorage.getItem('cadastroClientes')) || {};
        
        // Executa a migra√ß√£o do fiado para o cadastro
        const migracaoCadastro = migrarClientesParaCadastro(clientesFiado, cadastroClientes);
        if (migracaoCadastro.mudou) {
            cadastroClientes = migracaoCadastro.cadastro;
            // Salva os dados migrados imediatamente
            localStorage.setItem('cadastroClientes', JSON.stringify(cadastroClientes));
        }

        let comandasHoje = JSON.parse(localStorage.getItem('comandasHoje')) || []; 
        let historicoVendas = JSON.parse(localStorage.getItem('historicoVendas')) || {};
        let pagamentosHoje = JSON.parse(localStorage.getItem('pagamentosHoje')) || []; 
        
        // Estrutura de Configura√ß√£o ATUALIZADA
        let configComandas = JSON.parse(localStorage.getItem('configComandas')) || { 
            inicioA: 0, finalA: 0, inicioB: 0, finalB: 0, trocoInicial: 0 
        }; 

        // Fun√ß√µes de formata√ß√£o e salvamento
        const formatarMoeda = (valor) => valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        const formatarData = (isoString) => new Date(isoString).toLocaleDateString('pt-BR');
        const formatarDataInput = (isoString) => isoString.split('T')[0]; // Formato YYYY-MM-DD
        const formatarDataHora = (isoString) => new Date(isoString).toLocaleString('pt-BR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' });
        const formatarHora = (isoString) => new Date(isoString).toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' });
        
        const formatarTelefone = (numero) => {
            if (!numero) return '';
            const numLimpo = String(numero).replace(/\D/g, '');
            if (numLimpo.length === 11) return `(${numLimpo.substring(0, 2)}) ${numLimpo.substring(2, 7)}-${numLimpo.substring(7)}`;
            if (numLimpo.length === 10) return `(${numLimpo.substring(0, 2)}) ${numLimpo.substring(2, 6)}-${numLimpo.substring(6)}`;
            return numero;
        };
        
        const calcularDividaCliente = (chave) => {
            if (!clientesFiado[chave] || !clientesFiado[chave].transacoes) return 0;
            return clientesFiado[chave].transacoes.reduce((acc, t) => acc + t.valor, 0);
        };

        const salvarDados = () => {
            localStorage.setItem('vendasHoje', JSON.stringify(vendasHoje));
            localStorage.setItem('clientesFiado', JSON.stringify(clientesFiado));
            localStorage.setItem('comandasHoje', JSON.stringify(comandasHoje));
            localStorage.setItem('historicoVendas', JSON.stringify(historicoVendas));
            localStorage.setItem('pagamentosHoje', JSON.stringify(pagamentosHoje)); 
            localStorage.setItem('configComandas', JSON.stringify(configComandas)); 
            localStorage.setItem('cadastroClientes', JSON.stringify(cadastroClientes)); // NOVO
        };
        
        const arquivarVendasDoDia = () => {
            if (vendasHoje.length === 0 && pagamentosHoje.length === 0) return;
            const hoje = new Date();
            const chaveData = `${hoje.getFullYear()}-${String(hoje.getMonth() + 1).padStart(2, '0')}-${String(hoje.getDate()).padStart(2, '0')}`;
            const totais = vendasHoje.reduce((acc, venda) => {
                acc[venda.tipo] = (acc[venda.tipo] || 0) + venda.valor;
                return acc;
            }, { 'Dinheiro': 0, 'Cart√£o': 0, 'Pix': 0, 'Fiado': 0 });
            const totalVendas = totais.Dinheiro + totais.Cart√£o + totais.Pix + totais.Fiado;
            historicoVendas[chaveData] = {
                data: hoje.toISOString(),
                resumo: { ...totais, total: totalVendas },
                vendas: [...vendasHoje],
                pagamentos: [...pagamentosHoje], 
                trocoInicial: configComandas.trocoInicial,
                // Salva o intervalo ATUALIZADO
                intervaloComanda: { 
                    A_inicio: configComandas.inicioA, 
                    A_final: configComandas.finalA, 
                    B_inicio: configComandas.inicioB, 
                    B_final: configComandas.finalB 
                }
            };
        };

        const resetarDadosDoDia = () => {
            arquivarVendasDoDia();
            vendasHoje = [];
            comandasHoje = [];
            pagamentosHoje = []; 
            // Reseta a configura√ß√£o ATUALIZADA
            configComandas = { inicioA: 0, finalA: 0, inicioB: 0, finalB: 0, trocoInicial: 0 }; 
            
            // Limpa os inputs ATUALIZADOS
            inicioComandaAInput.value = ''; 
            finalComandaAInput.value = ''; 
            inicioComandaBInput.value = ''; 
            finalComandaBInput.value = ''; 
            
            trocoInicialInput.value = '';
            salvarDados();
            atualizarUI();
            alert('Dia encerrado e arquivado com sucesso! Novo dia iniciado.');
        }

        const limparHistoricoAntigo = () => {
            if (Object.keys(historicoVendas).length === 0) { alert('O hist√≥rico j√° est√° vazio.'); return; }
            historicoVendas = {};
            salvarDados();
            atualizarUI();
            alert('Hist√≥rico de vendas antigo foi permanentemente apagado! (A lista de fiado foi mantida).');
        }

        const ordenarComandas = (a, b) => {
            const tipoA = a.charAt(0); const tipoB = b.charAt(0);
            const numA = parseInt(a.substring(1)); const numB = parseInt(b.substring(1));
            if (tipoA < tipoB) return -1; if (tipoA > tipoB) return 1;
            return numA - numB;
        };

        const ordenarVendasPorComanda = (a, b) => {
            return ordenarComandas(a.comanda, b.comanda);
        };


        // --- L√ìGICA DE RENDERIZA√á√ÉO ---
        
        const renderizarResumoDiario = () => {
            const totais = vendasHoje.reduce((acc, venda) => {
                acc[venda.tipo] = (acc[venda.tipo] || 0) + venda.valor;
                return acc;
            }, { 'Dinheiro': 0, 'Cart√£o': 0, 'Pix': 0, 'Fiado': 0 });
            const totalVendas = totais.Dinheiro + totais.Cart√£o + totais.Pix + totais.Fiado;
            const totalPagamentosFiado = pagamentosHoje.reduce((acc, pag) => acc + pag.valor, 0);
            const totalDinheiroVendas = totais.Dinheiro;
            const totalDinheiroCaixa = (configComandas.trocoInicial || 0) + totalDinheiroVendas + totalPagamentosFiado; 
            totalVendasHojeEl.textContent = formatarMoeda(totalVendas);
            totalDinheiroEl.textContent = formatarMoeda(totalDinheiroVendas);
            totalCartaoEl.textContent = formatarMoeda(totais.Cart√£o);
            totalPixEl.textContent = formatarMoeda(totais.Pix);
            totalFiadoHojeEl.textContent = formatarMoeda(totais.Fiado);
            totalPagamentosFiadoHojeEl.textContent = formatarMoeda(totalPagamentosFiado);
            totalCaixaDinheiroEl.textContent = formatarMoeda(totalDinheiroCaixa);
        };

        const renderizarClientesFiado = () => {
            listaClientesFiadoEl.innerHTML = '';
            const chavesClientes = Object.keys(clientesFiado); 
            let totalGeral = 0; let clientesAtivos = 0; 
            if (chavesClientes.length === 0) {
                listaClientesFiadoEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente com d√©bito no momento.</p>';
                totalFiadoGeralEl.textContent = formatarMoeda(0); return;
            }
            chavesClientes.sort((a, b) => {
                const nomeA = clientesFiado[a].nome || a; const nomeB = clientesFiado[b].nome || b;
                return nomeA.localeCompare(nomeB);
            }).forEach(chave => {
                const dividaObj = clientesFiado[chave];
                const dividaValor = calcularDividaCliente(chave);
                totalGeral += dividaValor;
                if (dividaValor < 0.01) { return; }
                clientesAtivos++;
                const clienteDiv = document.createElement('div');
                clienteDiv.className = 'border rounded-lg p-4 space-y-3';
                const nomeDisplay = dividaObj.nome || (dividaObj.telefone ? "(Sem Nome)" : chave);
                const telefoneDisplay = formatarTelefone(dividaObj.telefone);
                clienteDiv.innerHTML = `
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-lg font-semibold text-gray-800">${nomeDisplay}</p>
                            ${telefoneDisplay ? `<div class="flex items-center gap-2 text-sm text-gray-500 mt-1"><i data-lucide="phone" class="w-4 h-4"></i><span>${telefoneDisplay}</span></div>` : ''}
                        </div>
                        <div class="text-right">
                            <p class="text-lg font-bold text-red-600 flex-shrink-0">${formatarMoeda(dividaValor)}</p>
                            <button class="btn btn-outline-secondary mt-1 ver-historico-btn" data-cliente-chave="${chave}"><i data-lucide="history" class="w-3 h-3"></i>Ver Hist√≥rico</button>
                        </div>
                    </div>
                    <div class="flex flex-col sm:flex-row gap-2">
                        <input type="number" step="0.01" class="input-field flex-grow" placeholder="Ex: 20.00">
                        <button class="btn btn-primary text-sm flex-shrink-0 pagar-fiado-btn" data-cliente-chave="${chave}"><i data-lucide="check" class="w-4 h-4"></i>Pagar/Amortizar</button>
                        <button class="btn btn-danger text-sm flex-shrink-0 remover-cliente-btn" data-cliente-chave="${chave}"><i data-lucide="trash-2" class="w-4 h-4"></i>Quitar e Remover</button>
                    </div>`;
                listaClientesFiadoEl.appendChild(clienteDiv);
            });
            if (clientesAtivos === 0) { listaClientesFiadoEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente com d√©bito no momento.</p>'; }
            totalFiadoGeralEl.textContent = formatarMoeda(totalGeral);
        };

        // NOVO: Renderiza a lista de clientes cadastrados
        const renderizarCadastroClientes = () => {
            listaClientesCadastradosEl.innerHTML = '';
            const chavesClientes = Object.keys(cadastroClientes);

            if (chavesClientes.length === 0) {
                listaClientesCadastradosEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente cadastrado.</p>';
                return;
            }

            // Ordena pelo nome
            chavesClientes.sort((a, b) => {
                const nomeA = cadastroClientes[a].nome || a;
                const nomeB = cadastroClientes[b].nome || b;
                return nomeA.localeCompare(nomeB);
            }).forEach(chave => {
                const cliente = cadastroClientes[chave];
                const clienteDiv = document.createElement('div');
                clienteDiv.className = 'flex justify-between items-center p-2 rounded-md even:bg-gray-50';
                
                clienteDiv.innerHTML = `
                    <div>
                        <p class="font-semibold text-gray-800">${cliente.nome}</p>
                        <p class="text-sm text-gray-500">${formatarTelefone(cliente.telefone)}</p>
                    </div>
                    <button class="btn btn-outline-danger text-xs remover-cliente-cadastro-btn" data-cliente-chave="${chave}">
                        <i data-lucide="trash-2" class="w-3 h-3"></i>Remover
                    </button>
                `;
                listaClientesCadastradosEl.appendChild(clienteDiv);
            });
        };

        const renderizarVendasDoDia = () => {
            listaVendasHojeEl.innerHTML = '';
            comandasRegistradasEl.textContent = comandasHoje.length > 0 ? [...comandasHoje].sort(ordenarComandas).join(', ') : 'Nenhuma comanda registrada.';
            if (vendasHoje.length === 0) {
                listaVendasHojeEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhuma venda registrada ainda.</p>'; return;
            }
            [...vendasHoje].sort(ordenarVendasPorComanda).forEach(venda => {
                const originalIndex = vendasHoje.findIndex(v => v.transacaoId === venda.transacaoId);
                const vendaDiv = document.createElement('div');
                vendaDiv.className = 'flex justify-between items-center p-2 rounded-md even:bg-gray-50';
                let tipoPagamentoIcon = '';
                switch(venda.tipo) {
                    case 'Dinheiro': tipoPagamentoIcon = '<i data-lucide="dollar-sign" class="w-4 h-4 text-green-600"></i>'; break;
                    case 'Cart√£o': tipoPagamentoIcon = '<i data-lucide="credit-card" class="w-4 h-4 text-blue-600"></i>'; break;
                    case 'Pix': tipoPagamentoIcon = '<i data-lucide="smartphone" class="w-4 h-4 text-purple-600"></i>'; break;
                    case 'Fiado': tipoPagamentoIcon = '<i data-lucide="book-user" class="w-4 h-4 text-red-600"></i>'; break;
                }
                vendaDiv.innerHTML = `
                    <div class="flex items-center gap-3">
                        <span class="font-bold text-gray-700 w-10 text-center">${venda.comanda}</span>
                        <span class="font-semibold text-gray-800">${formatarMoeda(venda.valor)}</span>
                        <span class="flex items-center gap-1 text-sm text-gray-500">${tipoPagamentoIcon} ${venda.tipo}</span>
                    </div>
                    <button class="btn btn-outline-danger text-xs remover-venda-btn" data-venda-index="${originalIndex}"><i data-lucide="trash-2" class="w-3 h-3"></i>Remover</button>
                    `;
                listaVendasHojeEl.appendChild(vendaDiv);
            });
        };

        const renderizarSeletorHistorico = () => {
            seletorData.innerHTML = '';
            relatorioContainer.innerHTML = '<p class="text-center text-gray-500 no-print">Selecione uma data para come√ßar.</p>';
            relatorioAcumuladoContainer.innerHTML = '';
            const datasSalvas = Object.keys(historicoVendas).sort().reverse();
            if (datasSalvas.length === 0) {
                seletorData.innerHTML = '<option>Nenhum relat√≥rio salvo</option>';
                const hoje = new Date();
                const primeiroDiaMes = new Date(hoje.getFullYear(), hoje.getMonth(), 1);
                dataInicioInput.value = formatarDataInput(primeiroDiaMes.toISOString());
                dataFimInput.value = formatarDataInput(hoje.toISOString());
                return;
            }
            seletorData.innerHTML = '<option value="">Selecione uma data</option>';
            datasSalvas.forEach(dataKey => {
                const option = document.createElement('option');
                option.value = dataKey;
                option.textContent = formatarData(historicoVendas[dataKey].data);
                seletorData.appendChild(option);
            });
            dataInicioInput.value = datasSalvas.length > 0 ? datasSalvas[datasSalvas.length - 1] : formatarDataInput(new Date().toISOString());
            dataFimInput.value = datasSalvas.length > 0 ? datasSalvas[0] : formatarDataInput(new Date().toISOString());
        };

        const mostrarRelatorio = (dataKey) => {
            relatorioAcumuladoContainer.innerHTML = '';
            if (!dataKey || !historicoVendas[dataKey]) {
                relatorioContainer.innerHTML = '<p class="text-center text-gray-500 no-print">Selecione uma data para come√ßar.</p>'; return;
            }
            const relatorio = historicoVendas[dataKey];
            const { resumo, vendas, pagamentos, trocoInicial } = relatorio; 
            let vendasHtml = vendas.sort(ordenarVendasPorComanda).map(venda => {
                let clienteDisplay = '';
                if (venda.tipo === 'Fiado') {
                    const telFormatado = formatarTelefone(venda.clienteTelefone);
                    if (venda.clienteNome) { clienteDisplay = `(${venda.clienteNome} / ${telFormatado})`; }
                    else { clienteDisplay = `(${telFormatado})`; }
                }
                return `
                <li class="flex justify-between items-center p-2 even:bg-gray-50">
                    <span>Comanda <strong>#${venda.comanda}</strong></span>
                    <span class="font-semibold">${formatarMoeda(venda.valor)}</span>
                    <span class="text-sm text-gray-600">${venda.tipo} ${clienteDisplay}</span>
                </li>`;
            }).join('');
            if (vendas.length === 0) { vendasHtml = '<li class="text-center text-gray-500 p-2">Nenhuma venda registrada.</li>'; }
            let pagamentosHtml = '';
            let totalPagamentos = 0;
            if (pagamentos && pagamentos.length > 0) {
                pagamentos.sort((a, b) => new Date(a.data) - new Date(b.data));
                pagamentosHtml = pagamentos.map(pag => {
                    totalPagamentos += pag.valor;
                    const telFormatado = pag.telefone ? `(${formatarTelefone(pag.telefone)})` : '';
                    const horaPagamento = formatarHora(pag.data);
                    return `
                    <li class="flex justify-between items-center p-2 even:bg-gray-50">
                        <div>
                            <span><strong class="text-gray-800">${pag.cliente}</strong> ${telFormatado}</span>
                            <span class="text-xs text-gray-500 block">√†s ${horaPagamento}</span>
                        </div>
                        <span class="font-semibold text-green-600">${formatarMoeda(pag.valor)}</span>
                    </li>`;
                }).join('');
            } else { pagamentosHtml = '<li class="text-center text-gray-500 p-2">Nenhum pagamento recebido.</li>'; }
            const totalDinheiroRelatorio = (trocoInicial || 0) + resumo.Dinheiro + totalPagamentos;
            relatorioContainer.innerHTML = `
                <div class="space-y-3">
                    <h3 class="text-xl font-bold text-gray-800">Relat√≥rio de ${formatarData(relatorio.data)}</h3>
                    <div class="space-y-2 border-t pt-2">
                        <div class="flex justify-between font-bold text-blue-600"><p>Venda Total (Bruta):</p><p>${formatarMoeda(resumo.total)}</p></div>
                        <div class="flex justify-between text-sm text-gray-700"><p>Valor Inicial (Troco):</p><p>${formatarMoeda(trocoInicial || 0)}</p></div>
                        <div class="flex justify-between text-sm"><p>Dinheiro:</p><p>${formatarMoeda(resumo.Dinheiro)}</p></div>
                        <div class="flex justify-between text-sm"><p>Cart√£o:</p><p>${formatarMoeda(resumo.Cart√£o)}</p></div>
                        <div class="flex justify-between text-sm"><p>Pix:</p><p>${formatarMoeda(resumo.Pix)}</p></div>
                        <div class="flex justify-between text-sm text-red-600"><p>Fiado (Novas Vendas):</p><p>${formatarMoeda(resumo.Fiado)}</p></div>
                    </div>
                    <div class="space-y-2 border-t pt-2">
                        <div class="flex justify-between font-bold text-green-600"><p>Pagamentos de Fiado Recebidos:</p><p>${formatarMoeda(totalPagamentos)}</p></div>
                    </div>
                    <div class="space-y-2 border-t pt-2 bg-blue-50 p-2 rounded">
                        <div class="flex justify-between font-bold text-blue-700"><p>Total em Dinheiro (Final):</p><p>${formatarMoeda(totalDinheiroRelatorio)}</p></div>
                        <p class="text-xs text-blue-600">(Valor Inicial + Vendas em Dinheiro + Pagamentos Recebidos)</p>
                    </div>
                    <div class="border-t pt-2">
                        <h4 class="font-semibold mb-2">Detalhes das Vendas (${vendas.length} registros):</h4>
                        <ul class="space-y-1 max-h-40 overflow-y-auto pr-2">${vendasHtml}</ul>
                    </div>
                    <div class="border-t pt-2">
                        <h4 class="font-semibold mb-2">Detalhes dos Pagamentos (${pagamentos ? pagamentos.length : 0} registros):</h4>
                        <ul class="space-y-1 max-h-40 overflow-y-auto pr-2">${pagamentosHtml}</ul>
                    </div>
                    <button id="imprimirBtn" class="btn btn-success w-full mt-4 no-print"><i data-lucide="printer"></i>Imprimir Relat√≥rio</button>
                </div>
            `;
            lucide.createIcons();
        };

        const mostrarRelatorioAcumulado = () => {
            relatorioContainer.innerHTML = '<p class="text-center text-gray-500 no-print">Selecione uma data para come√ßar.</p>';
            seletorData.value = '';
            const dataInicio = dataInicioInput.value; const dataFim = dataFimInput.value;
            if (!dataInicio || !dataFim) { alert('Por favor, selecione data de in√≠cio e fim.'); return; }
            const dataInicioObj = new Date(dataInicio + 'T00:00:00'); const dataFimObj = new Date(dataFim + 'T23:59:59');
            if (dataFimObj < dataInicioObj) { alert('A data final n√£o pode ser anterior √† data inicial.'); return; }
            const totaisAcumulados = { vendaBruta: 0, trocoInicialTotal: 0, dinheiro: 0, cartao: 0, pix: 0, fiado: 0, pagamentosFiado: 0, diasContados: 0 };
            for (const dataKey in historicoVendas) {
                const relatorio = historicoVendas[dataKey];
                const dataRelatorio = new Date(relatorio.data);
                if (dataRelatorio >= dataInicioObj && dataRelatorio <= dataFimObj) {
                    totaisAcumulados.diasContados++;
                    totaisAcumulados.vendaBruta += relatorio.resumo.total || 0;
                    totaisAcumulados.trocoInicialTotal += relatorio.trocoInicial || 0;
                    totaisAcumulados.dinheiro += relatorio.resumo.Dinheiro || 0;
                    totaisAcumulados.cartao += relatorio.resumo.Cart√£o || 0;
                    totaisAcumulados.pix += relatorio.resumo.Pix || 0;
                    totaisAcumulados.fiado += relatorio.resumo.Fiado || 0;
                    if (relatorio.pagamentos && relatorio.pagamentos.length > 0) {
                        totaisAcumulados.pagamentosFiado += relatorio.pagamentos.reduce((acc, pag) => acc + pag.valor, 0);
                    }
                }
            }
            if (totaisAcumulados.diasContados === 0) {
                 relatorioAcumuladoContainer.innerHTML = `<div class="border rounded-lg p-4 bg-gray-50 text-center text-gray-600">Nenhum relat√≥rio encontrado no per√≠odo de ${formatarData(dataInicioObj.toISOString())} at√© ${formatarData(dataFimObj.toISOString())}.</div>`;
                 return;
            }
            const totalDinheiroGerado = totaisAcumulados.trocoInicialTotal + totaisAcumulados.dinheiro + totaisAcumulados.pagamentosFiado;
            relatorioAcumuladoContainer.innerHTML = `
                <div class="border-t pt-4">
                    <h3 class="text-xl font-bold text-gray-800">Relat√≥rio Acumulado</h3>
                    <p class="text-sm text-gray-500 mb-3">De ${formatarData(dataInicioObj.toISOString())} at√© ${formatarData(dataFimObj.toISOString())} (${totaisAcumulados.diasContados} dias)</p>
                    <div class="space-y-2 border-t pt-2">
                        <div class="flex justify-between font-bold text-blue-600"><p>Venda Total (Bruta):</p><p>${formatarMoeda(totaisAcumulados.vendaBruta)}</p></div>
                        <div class="flex justify-between text-sm text-gray-700"><p>Total Valor Inicial (Troco):</p><p>${formatarMoeda(totaisAcumulados.trocoInicialTotal)}</p></div>
                        <div class="flex justify-between text-sm"><p>Dinheiro (Vendas):</p><p>${formatarMoeda(totaisAcumulados.dinheiro)}</p></div>
                        <div class="flex justify-between text-sm"><p>Cart√£o:</p><p>${formatarMoeda(totaisAcumulados.cartao)}</p></div>
                        <div class="flex justify-between text-sm"><p>Pix:</p><p>${formatarMoeda(totaisAcumulados.pix)}</p></div>
                        <div class="flex justify-between text-sm text-red-600"><p>Fiado (Novas Vendas):</p><p>${formatarMoeda(totaisAcumulados.fiado)}</p></div>
                    </div>
                    <div class="space-y-2 border-t pt-2">
                        <div class="flex justify-between font-bold text-green-600"><p>Pagamentos de Fiado Recebidos:</p><p>${formatarMoeda(totaisAcumulados.pagamentosFiado)}</p></div>
                    </div>
                    <div class="space-y-2 border-t pt-2 bg-blue-50 p-2 rounded mt-2">
                        <div class="flex justify-between font-bold text-blue-700"><p>Total em Dinheiro Gerado:</p><p>${formatarMoeda(totalDinheiroGerado)}</p></div>
                        <p class="text-xs text-blue-600">(Total Troco + Total Vendas Dinheiro + Total Pagamentos Recebidos)</p>
                    </div>
                </div>
            `;
        };
        
        const mostrarHistoricoFiado = (chaveCliente) => {
            const cliente = clientesFiado[chaveCliente]; if (!cliente) return;
            const nomeDisplay = cliente.nome || formatarTelefone(cliente.telefone) || chaveCliente;
            historicoFiadoModalTitulo.textContent = `Hist√≥rico de: ${nomeDisplay}`;
            historicoFiadoModalConteudo.innerHTML = ''; 
            let saldoCorrente = 0;
            const transacoesHtml = cliente.transacoes
                .sort((a, b) => new Date(a.data) - new Date(b.data))
                .map(t => {
                    saldoCorrente += t.valor;
                    let descricao = ''; let valorClasse = '';
                    if (t.tipo === 'compra') { descricao = `Compra (Comanda #${t.comanda})`; valorClasse = 'text-red-600'; }
                    else if (t.tipo === 'pagamento') { descricao = 'Pagamento'; valorClasse = 'text-green-600'; }
                    else if (t.tipo === 'importado') { descricao = 'Saldo Anterior (Importado)'; valorClasse = 'text-gray-600'; }
                    return `
                    <li class="flex justify-between items-center p-3 border-b">
                        <div><p class="font-semibold">${descricao}</p><p class="text-sm text-gray-500">${formatarDataHora(t.data)}</p></div>
                        <div class="text-right"><p class="font-bold ${valorClasse}">${formatarMoeda(t.valor)}</p><p class="text-sm text-gray-600">Saldo: ${formatarMoeda(saldoCorrente)}</p></div>
                    </li>`;
                }).join('');
            historicoFiadoModalConteudo.innerHTML = `<ul class="space-y-1">${transacoesHtml}</ul>`;
            historicoFiadoModal.style.display = 'flex';
            lucide.createIcons();
        };

        const atualizarUI = () => {
            renderizarResumoDiario();
            renderizarClientesFiado();
            renderizarCadastroClientes(); // NOVO
            renderizarVendasDoDia();
            renderizarSeletorHistorico();
            // Popula os inputs de configura√ß√£o ATUALIZADOS
            trocoInicialInput.value = configComandas.trocoInicial > 0 ? configComandas.trocoInicial : '';
            inicioComandaAInput.value = configComandas.inicioA > 0 ? configComandas.inicioA : '';
            finalComandaAInput.value = configComandas.finalA > 0 ? configComandas.finalA : '';
            inicioComandaBInput.value = configComandas.inicioB > 0 ? configComandas.inicioB : '';
            finalComandaBInput.value = configComandas.finalB > 0 ? configComandas.finalB : '';
            lucide.createIcons();
        };

        // --- L√ìGICA DE EVENTOS ---
        
        vendaForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const valor = parseFloat(valorVendaInput.value);
            const numA = parseInt(numeroComandaAInput.value); const numB = parseInt(numeroComandaBInput.value);
            let tipoComanda, numeroComanda;
            if (!isNaN(numA) && numA > 0) { tipoComanda = 'A'; numeroComanda = numA; }
            else if (!isNaN(numB) && numB > 0) { tipoComanda = 'B'; numeroComanda = numB; }
            else { alert('Por favor, insira um n√∫mero de comanda v√°lido (A ou B).'); return; }
            const tipoPagamento = document.querySelector('input[name="tipoPagamento"]:checked').value;
            const comandaId = tipoComanda + numeroComanda; 
            const transacaoId = new Date().toISOString();
            if (isNaN(valor) || valor <= 0) { alert('Por favor, insira um valor de venda v√°lido.'); return; }
            if(comandasHoje.includes(comandaId)) { alert(`A comanda de n√∫mero ${comandaId} j√° foi registrada hoje.`); return; } 
            const novaVenda = { comanda: comandaId, valor, tipo: tipoPagamento, data: transacaoId, transacaoId: transacaoId }; 
            
            if (tipoPagamento === 'Fiado') {
                const nomeCliente = nomeClienteFiadoInput.value.trim();
                const telefoneClienteBruto = telefoneClienteFiadoInput.value.trim();
                const telefoneCliente = limparTelefone(telefoneClienteBruto);
                
                // --- ATUALIZADO: Valida√ß√µes de nome e telefone ---
                if (!telefoneCliente) { 
                    alert('Por favor, insira um telefone do cliente (obrigat√≥rio).'); 
                    telefoneClienteFiadoInput.focus();
                    return; 
                }
                if (!nomeCliente) {
                    alert('Por favor, insira um nome para o cliente (obrigat√≥rio).');
                    nomeClienteFiadoInput.focus();
                    return;
                }
                // --- Fim da atualiza√ß√£o ---
                
                const chaveCliente = telefoneCliente;
                novaVenda.clienteNome = nomeCliente;
                novaVenda.clienteTelefone = telefoneCliente; 
                
                if (!clientesFiado[chaveCliente]) {
                    clientesFiado[chaveCliente] = { nome: nomeCliente, telefone: telefoneCliente, transacoes: [] };
                }
                // Atualiza o nome no registro de fiado (pode ter sido alterado)
                clientesFiado[chaveCliente].nome = nomeCliente; 
                
                clientesFiado[chaveCliente].transacoes.push({
                    data: transacaoId, tipo: 'compra', valor: valor, comanda: comandaId, transacaoId: transacaoId
                });
                
                // Adiciona/atualiza no cadastro geral de clientes
                if (!cadastroClientes[chaveCliente] || cadastroClientes[chaveCliente].nome !== nomeCliente) {
                     cadastroClientes[chaveCliente] = { nome: nomeCliente, telefone: telefoneCliente };
                }
            }
            
            vendasHoje.push(novaVenda);
            comandasHoje.push(comandaId); 
            salvarDados();
            atualizarUI();
            
            vendaForm.reset();
            campoClienteFiado.classList.add('hidden');
            nomeClienteFiadoInput.required = false;
            telefoneClienteFiadoInput.required = false;
            numeroComandaAInput.value = ''; numeroComandaBInput.value = '';
            numeroComandaAInput.disabled = false; numeroComandaBInput.disabled = false;
            numeroComandaAInput.focus();
        });
        
        numeroComandaAInput.addEventListener('input', () => {
            numeroComandaBInput.disabled = !!numeroComandaAInput.value;
        });
        numeroComandaBInput.addEventListener('input', () => {
            numeroComandaAInput.disabled = !!numeroComandaBInput.value;
        });

        // Exibe/oculta campos de fiado
        tipoPagamentoRadios.forEach(radio => radio.addEventListener('change', () => {
            const isFiado = radio.value === 'Fiado';
            campoClienteFiado.classList.toggle('hidden', !isFiado);
            // --- ATUALIZADO: Ambos obrigat√≥rios ---
            nomeClienteFiadoInput.required = isFiado; 
            telefoneClienteFiadoInput.required = isFiado;
        }));
        
        // Evento de input no NOME do fiado para autopreencher o telefone
        nomeClienteFiadoInput.addEventListener('input', (e) => {
            const nomeDigitado = e.target.value.trim();
            
            if (nomeDigitado.length < 2) { // N√£o busca com menos de 2 caracteres
                 telefoneClienteFiadoInput.value = ''; // Limpa se o nome for apagado
                 return;
            }

            // Busca clientes que batem com o nome digitado
            const clientesEncontrados = Object.values(cadastroClientes).filter(
                cliente => cliente.nome.toLowerCase() === nomeDigitado.toLowerCase()
            );

            // Se encontrar exatamente UM cliente, autopreenche o telefone
            if (clientesEncontrados.length === 1) {
                telefoneClienteFiadoInput.value = formatarTelefone(clientesEncontrados[0].telefone);
            } else {
                // Se encontrar v√°rios ou nenhum, limpa o campo de telefone
                telefoneClienteFiadoInput.value = '';
            }
        });
        
        // Evento para o formul√°rio de cadastro de clientes
        addClienteForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const nome = nomeClienteCadastroInput.value.trim();
            const telefoneBruto = telefoneClienteCadastroInput.value.trim();
            const telefoneLimpo = limparTelefone(telefoneBruto);

            if (!nome || !telefoneLimpo) {
                alert('Nome e Telefone s√£o obrigat√≥rios para o cadastro.');
                return;
            }

            if (cadastroClientes[telefoneLimpo]) {
                alert('Um cliente com este n√∫mero de telefone j√° existe no cadastro.');
                return;
            }

            cadastroClientes[telefoneLimpo] = { nome: nome, telefone: telefoneLimpo };
            salvarDados();
            atualizarUI();
            
            addClienteForm.reset();
            alert('Cliente adicionado ao cadastro!');
        });
        
        // Evento para remover cliente do cadastro geral
        listaClientesCadastradosEl.addEventListener('click', (e) => {
            const target = e.target.closest('.remover-cliente-cadastro-btn');
            if (!target) return;
            
            const clienteChave = target.dataset.clienteChave;
            const clienteNome = cadastroClientes[clienteChave]?.nome || 'Cliente';

            if (confirm(`Tem certeza que deseja remover "${clienteNome}" do seu cadastro de clientes?\n\n(Aten√ß√£o: Isso N√ÉO afeta o hist√≥rico de d√≠vidas dele na "Gest√£o de Fiado".)`)) {
                delete cadastroClientes[clienteChave];
                salvarDados();
                atualizarUI();
            }
        });


        listaClientesFiadoEl.addEventListener('click', (e) => {
            const target = e.target.closest('button');
            if (!target) return;
            const clienteChave = target.dataset.clienteChave; 
            if (target.classList.contains('ver-historico-btn')) {
                mostrarHistoricoFiado(clienteChave); return;
            }
            if (target.classList.contains('pagar-fiado-btn')) {
                const inputValor = target.parentElement.querySelector('input');
                const valorPago = parseFloat(inputValor.value);
                if (isNaN(valorPago) || valorPago <= 0) { alert('Valor de pagamento inv√°lido.'); return; }
                const nomeParaRelatorio = clientesFiado[clienteChave].nome || clienteChave;
                const telefoneCliente = clientesFiado[clienteChave].telefone || (clienteChave.match(/^[0-9() -]+$/) ? clienteChave : '');
                const dataPagamento = new Date().toISOString();
                pagamentosHoje.push({ cliente: nomeParaRelatorio, telefone: telefoneCliente, valor: valorPago, data: dataPagamento });
                clientesFiado[clienteChave].transacoes.push({ data: dataPagamento, tipo: 'pagamento', valor: -valorPago });
                salvarDados(); 
                atualizarUI();
                inputValor.value = ''; 
            } else if (target.classList.contains('remover-cliente-btn')) {
                const nomeParaRelatorio = clientesFiado[clienteChave].nome || clienteChave;
                const valorQuitado = calcularDividaCliente(clienteChave);
                if (valorQuitado < 0.01) { alert('Este cliente n√£o possui d√≠vidas para quitar.'); return; }
                if (confirm(`Tem certeza que deseja quitar a d√≠vida de ${formatarMoeda(valorQuitado)} para "${nomeParaRelatorio}"?`)) {
                    const telefoneCliente = clientesFiado[clienteChave].telefone || (clienteChave.match(/^[0-9() -]+$/) ? clienteChave : '');
                    const dataPagamento = new Date().toISOString();
                    pagamentosHoje.push({ cliente: nomeParaRelatorio, telefone: telefoneCliente, valor: valorQuitado, data: dataPagamento });
                    clientesFiado[clienteChave].transacoes.push({ data: dataPagamento, tipo: 'pagamento', valor: -valorQuitado });
                    salvarDados();
                    atualizarUI();
                }
            }
        });

        listaVendasHojeEl.addEventListener('click', (e) => {
            const target = e.target.closest('.remover-venda-btn');
            if (!target) return;
            const index = parseInt(target.dataset.vendaIndex);
            const vendaParaRemover = vendasHoje[index];
            if (confirm(`Remover a venda da comanda N¬∫ ${vendaParaRemover.comanda}?`)) {
                if (vendaParaRemover.tipo === 'Fiado' && vendaParaRemover.clienteTelefone) {
                    const clienteChave = vendaParaRemover.clienteTelefone; 
                    if (clientesFiado[clienteChave] && clientesFiado[clienteChave].transacoes) {
                        clientesFiado[clienteChave].transacoes = clientesFiado[clienteChave].transacoes.filter(
                            t => t.transacaoId !== vendaParaRemover.transacaoId
                        );
                    }
                }
                comandasHoje = comandasHoje.filter(c => c !== vendaParaRemover.comanda); 
                vendasHoje.splice(index, 1);
                salvarDados();
                atualizarUI();
            }
        });
        
        seletorData.addEventListener('change', (e) => mostrarRelatorio(e.target.value));
        calcularPeriodoBtn.addEventListener('click', mostrarRelatorioAcumulado);
        relatorioContainer.addEventListener('click', (e) => {
            const target = e.target.closest('#imprimirBtn');
            if (target) window.print();
        });

        // Evento de Salvar Configura√ß√£o ATUALIZADO
        salvarConfigComandasBtn.addEventListener('click', () => {
            configComandas.inicioA = parseInt(inicioComandaAInput.value) || 0;
            configComandas.finalA = parseInt(finalComandaAInput.value) || 0;
            configComandas.inicioB = parseInt(inicioComandaBInput.value) || 0;
            configComandas.finalB = parseInt(finalComandaBInput.value) || 0;
            configComandas.trocoInicial = parseFloat(trocoInicialInput.value) || 0;
            
            if ((configComandas.finalA > 0 && configComandas.finalA < configComandas.inicioA) || 
                (configComandas.finalB > 0 && configComandas.finalB < configComandas.inicioB)) {
                alert('Erro: O n√∫mero final da comanda n√£o pode ser menor que o n√∫mero inicial.');
                return;
            }

            salvarDados();
            alert('Intervalos de comandas e valor inicial salvos para o dia!');
            atualizarUI();
        });

        // Evento de Encerrar Dia ATUALIZADO
        resetarDiaBtn.addEventListener('click', () => {
            if (vendasHoje.length === 0 && pagamentosHoje.length === 0) {
                if(confirm('Nenhuma venda ou pagamento registrado. Deseja iniciar um novo dia mesmo assim?')) resetarDadosDoDia();
                return;
            }

            const { inicioA, finalA, inicioB, finalB } = configComandas;

            // Valida√ß√£o de configura√ß√£o
            if ((finalA > 0 && inicioA === 0) || (finalA === 0 && inicioA > 0)) {
                alert('Por favor, preencha o In√≠cio e o Final para as comandas Amarelas, ou deixe ambos em 0.');
                return;
            }
             if ((finalB > 0 && inicioB === 0) || (finalB === 0 && inicioB > 0)) {
                alert('Por favor, preencha o In√≠cio e o Final para as comandas Brancas, ou deixe ambos em 0.');
                return;
            }
            if (finalA > 0 && finalA < inicioA) { alert('Erro: A comanda Amarela final √© menor que a inicial.'); return; }
            if (finalB > 0 && finalB < inicioB) { alert('Erro: A comanda Branca final √© menor que a inicial.'); return; }

            const registradasA = new Set(comandasHoje.filter(c => c.startsWith('A')).map(c => parseInt(c.substring(1))));
            const registradasB = new Set(comandasHoje.filter(c => c.startsWith('B')).map(c => parseInt(c.substring(1))));

            const faltandoA = [];
            const extrasA = [];
            if (finalA > 0) { // Se um intervalo foi definido
                for (let i = inicioA; i <= finalA; i++) {
                    if (!registradasA.has(i)) faltandoA.push(`A${i}`);
                }
                registradasA.forEach(num => {
                    if (num < inicioA || num > finalA) extrasA.push(`A${num}`);
                });
            } else if (registradasA.size > 0) { // Sem intervalo, mas registrou
                registradasA.forEach(num => extrasA.push(`A${num} (n√£o esperada)`));
            }

            const faltandoB = [];
            const extrasB = [];
             if (finalB > 0) { // Se um intervalo foi definido
                for (let i = inicioB; i <= finalB; i++) {
                    if (!registradasB.has(i)) faltandoB.push(`B${i}`);
                }
                registradasB.forEach(num => {
                    if (num < inicioB || num > finalB) extrasB.push(`B${num}`);
                });
            } else if (registradasB.size > 0) { // Sem intervalo, mas registrou
                registradasB.forEach(num => extrasB.push(`B${num} (n√£o esperada)`));
            }

            let mensagensErro = [];
            if (faltandoA.length > 0) mensagensErro.push(`Faltando Amarelas: ${faltandoA.join(', ')}`);
            if (extrasA.length > 0) mensagensErro.push(`Extras Amarelas: ${extrasA.join(', ')}`);
            if (faltandoB.length > 0) mensagensErro.push(`Faltando Brancas: ${faltandoB.join(', ')}`);
            if (extrasB.length > 0) mensagensErro.push(`Extras Brancas: ${extrasB.join(', ')}`);

            if (mensagensErro.length > 0) {
                senhaModalMensagem.textContent = `Inconsist√™ncias nas comandas: ${mensagensErro.join('; ')}. Digite a senha para for√ßar o encerramento.`;
                acaoPendenteComSenha = resetarDadosDoDia; 
                senhaModal.style.display = 'flex';
                senhaInput.focus();
            } else {
                if (confirm('A sequ√™ncia de comandas (baseado no intervalo configurado) est√° correta. Deseja encerrar e arquivar o dia?')) {
                    resetarDadosDoDia();
                }
            }
        });
        
        cancelarSenhaBtn.addEventListener('click', () => {
            senhaModal.style.display = 'none';
            acaoPendenteComSenha = null; 
            senhaInput.value = ''; 
        });

        confirmarSenhaBtn.addEventListener('click', () => {
            if (senhaInput.value === SENHA_ADMIN) {
                senhaModal.style.display = 'none';
                senhaInput.value = '';
                if (typeof acaoPendenteComSenha === 'function') { acaoPendenteComSenha(); }
                acaoPendenteComSenha = null; 
            } else { alert('Senha incorreta!'); }
        });

        historicoFiadoModalClose.addEventListener('click', () => {
            historicoFiadoModal.style.display = 'none';
        });
        
        exportarDadosBtn.addEventListener('click', () => {
            const backupData = {
                historico: historicoVendas,
                fiado: clientesFiado,
                cadastro: cadastroClientes // NOVO
            };
            
            if (Object.keys(historicoVendas).length === 0 && Object.keys(clientesFiado).length === 0 && Object.keys(cadastroClientes).length === 0) {
                alert('N√£o h√° dados para exportar.');
                return;
            }
            
            const dataStr = JSON.stringify(backupData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'backup_pensao_completo.json';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
            alert('Backup exportado com sucesso!');
        });
        
        importarBtn.addEventListener('click', () => {
            importarDadosInput.click();
        });

        importarDadosInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (event) => {
                try {
                    const dadosImportados = JSON.parse(event.target.result);
                    
                    if (dadosImportados && typeof dadosImportados === 'object' && 
                        (dadosImportados.hasOwnProperty('historico') || dadosImportados.hasOwnProperty('fiado') || dadosImportados.hasOwnProperty('cadastro'))) {
                        
                        if (confirm('Deseja substituir seus dados por este backup? (Os dados do dia atual n√£o ser√£o afetados)')) {
                            historicoVendas = dadosImportados.historico || historicoVendas;
                            clientesFiado = migrarEstruturaFiado(dadosImportados.fiado || clientesFiado);
                            cadastroClientes = dadosImportados.cadastro || cadastroClientes; 
                            
                            const migracaoPosImport = migrarClientesParaCadastro(clientesFiado, cadastroClientes);
                            cadastroClientes = migracaoPosImport.cadastro;

                            salvarDados();
                            atualizarUI();
                            alert('Backup importado com sucesso!');
                        }
                    } else {
                        alert('Arquivo de backup inv√°lido ou corrompido.');
                    }
                } catch (error) {
                    console.error('Erro ao importar backup:', error);
                    alert('Ocorreu um erro ao ler o arquivo de backup.');
                } finally {
                    e.target.value = null;
                }
            };
            reader.readAsText(file);
        });

        limparHistoricoBtn.addEventListener('click', () => {
            senhaModalMensagem.innerHTML = '<strong>Aten√ß√£o!</strong> Esta a√ß√£o vai apagar <strong>PERMANENTEMENTE</strong> todo o hist√≥rico de relat√≥rios salvos.<br><br>Recomenda-se exportar um backup primeiro. Digite a senha para confirmar.';
            acaoPendenteComSenha = limparHistoricoAntigo; 
            senhaModal.style.display = 'flex';
            senhaInput.focus();
        });

        // Inicializa√ß√£o da aplica√ß√£o
        document.addEventListener('DOMContentLoaded', () => {
            salvarDados(); // Salva os dados migrados na primeira carga
            atualizarUI();
            window.addEventListener('click', (event) => {
                if (event.target == senhaModal) {
                    senhaModal.style.display = 'none';
                    acaoPendenteComSenha = null; 
                    senhaInput.value = ''; 
                }
                if (event.target == historicoFiadoModal) {
                    historicoFiadoModal.style.display = 'none';
                }
            });
        });
    </script>

</body>
</html>

