    <script type="module">
        // Inicializa os √≠cones
        lucide.createIcons();

        // --- Vari√°vel de Estado ---
        let isModoDistribuido = false;

        // --- Elementos da UI ---
        const vendaForm = document.getElementById('vendaForm');
        const numeroComandaAInput = document.getElementById('numeroComandaA');
        const numeroComandaBInput = document.getElementById('numeroComandaB');
        
        // Elementos do formul√°rio H√çBRIDO
        const formPagamentoSimples = document.getElementById('formPagamentoSimples');
        const formPagamentoDistribuido = document.getElementById('formPagamentoDistribuido');
        const toggleDistribuicaoBtn = document.getElementById('toggleDistribuicaoBtn');
        const toggleSimplesBtn = document.getElementById('toggleSimplesBtn');

        // - Modo Simples
        const valorVendaInput = document.getElementById('valorVenda'); // Valor √∫nico
        const tipoPagamentoRadios = document.querySelectorAll('input[name="tipoPagamento"]');

        // - Modo Distribu√≠do
        const valorVendaTotalInput = document.getElementById('valorVendaTotal');
        const valorDinheiroInput = document.getElementById('valorDinheiro');
        const valorCartaoInput = document.getElementById('valorCartao');
        const valorPixInput = document.getElementById('valorPix');
        const valorFiadoInput = document.getElementById('valorFiado');
        const totalDistribuidoEl = document.getElementById('totalDistribuido');
        const faltandoEl = document.getElementById('faltando');
        const statusDistribuicaoEl = document.getElementById('statusDistribuicao');

        // Elementos do Fiado (Compartilhado)
        const campoClienteFiado = document.getElementById('campoClienteFiado');
        const nomeClienteFiadoInput = document.getElementById('nomeClienteFiado');
        const telefoneClienteFiadoInput = document.getElementById('telefoneClienteFiado'); 
        
        // NOVO ELEMENTO
        const datalistNomesClientes = document.getElementById('listaNomesClientes');
        // NOVO ELEMENTO BUSCA GLOBAL
        const buscadorGlobal = document.getElementById('buscadoGlobal');
        
        const resetarDiaBtn = document.getElementById('resetarDiaBtn');
        
        // Elementos de Configura√ß√£o
        const inicioComandaAInput = document.getElementById('inicioComandaA'); 
        const finalComandaAInput = document.getElementById('finalComandaA'); 
        const inicioComandaBInput = document.getElementById('inicioComandaB'); 
        const finalComandaBInput = document.getElementById('finalComandaB'); 
        const salvarConfigComandasBtn = document.getElementById('salvarConfigComandasBtn'); 
        const trocoInicialInput = document.getElementById('trocoInicialInput');
        
        // Displays de resumo
        const totalVendasHojeEl = document.getElementById('totalVendasHoje');
        const totalDinheiroEl = document.getElementById('totalDinheiro');
        const totalCartaoEl = document.getElementById('totalCartao');
        const totalPixEl = document.getElementById('totalPix');
        const totalFiadoHojeEl = document.getElementById('totalFiadoHoje');
        const totalPagamentosFiadoHojeEl = document.getElementById('totalPagamentosFiadoHoje');
        const totalPagamentosFiadoDinheiroEl = document.getElementById('totalPagamentosFiadoDinheiro');
        const totalPagamentosFiadoCartaoEl = document.getElementById('totalPagamentosFiadoCartao');
        const totalPagamentosFiadoPixEl = document.getElementById('totalPagamentosFiadoPix');
        const totalAcumuladoDinheiroEl = document.getElementById('totalAcumuladoDinheiro');
        const totalAcumuladoCartaoEl = document.getElementById('totalAcumuladoCartao');
        const totalAcumuladoPixEl = document.getElementById('totalAcumuladoPix');
        const totalAcumuladoGeralEl = document.getElementById('totalAcumuladoGeral');
        const totalCaixaDinheiroEl = document.getElementById('totalCaixaDinheiro');
        
        // Se√ß√£o de Fiado
        const listaClientesFiadoEl = document.getElementById('listaClientesFiado');
        const totalFiadoGeralEl = document.getElementById('totalFiadoGeral');

        // Se√ß√£o de Vendas do Dia
        const listaVendasHojeEl = document.getElementById('listaVendasHoje');
        const comandasRegistradasEl = document.getElementById('comandasRegistradas');

        // Se√ß√£o Cadastro de Clientes
        const addClienteForm = document.getElementById('addClienteForm');
        const nomeClienteCadastroInput = document.getElementById('nomeClienteCadastro');
        const telefoneClienteCadastroInput = document.getElementById('telefoneClienteCadastro');
        const listaClientesCadastradosEl = document.getElementById('listaClientesCadastrados');

        // Se√ß√£o de Hist√≥rico e Backup
        const seletorData = document.getElementById('seletorData');
        const relatorioContainer = document.getElementById('relatorioContainer');
        const exportarDadosBtn = document.getElementById('exportarDadosBtn');
        const importarBtn = document.getElementById('importarBtn');
        const importarDadosInput = document.getElementById('importarDadosInput');
        const limparHistoricoBtn = document.getElementById('limparHistoricoBtn'); 

        // Relat√≥rio Acumulado
        const dataInicioInput = document.getElementById('dataInicio');
        const dataFimInput = document.getElementById('dataFim');
        const calcularPeriodoBtn = document.getElementById('calcularPeriodoBtn');
        const relatorioAcumuladoContainer = document.getElementById('relatorioAcumuladoContainer');

        // Modal de Senha
        const senhaModal = document.getElementById('senhaModal');
        const senhaModalMensagem = document.getElementById('senhaModalMensagem');
        const senhaInput = document.getElementById('senhaInput');
        const cancelarSenhaBtn = document.getElementById('cancelarSenhaBtn');
        const confirmarSenhaBtn = document.getElementById('confirmarSenhaBtn');

        // Modal de Hist√≥rico Fiado
        const historicoFiadoModal = document.getElementById('historicoFiadoModal');
        const historicoFiadoModalClose = document.getElementById('historicoFiadoModalClose');
        const historicoFiadoModalTitulo = document.getElementById('historicoFiadoModalTitulo');
        const historicoFiadoModalConteudo = document.getElementById('historicoFiadoModalConteudo');


        // --- L√ìGICA DE DADOS ---
        const SENHA_ADMIN = 'admin123';
        let acaoPendenteComSenha = null; 

        const limparTelefone = (tel) => (tel || '').replace(/\D/g, '');
        
        // Normaliza string para busca (remove acentos e lowercase)
        const normalizarTexto = (texto) => {
            return (texto || '').normalize('NFD').replace(/[\u0300-\u036f]/g, "").toLowerCase();
        };

        // Fun√ß√£o de migra√ß√£o (para dados antigos)
        const migrarEstruturaVendas = (vendas) => {
            if (!vendas || vendas.length === 0 || vendas[0].hasOwnProperty('pagamentos')) {
                return vendas; // J√° est√£o no formato novo ou vazias
            }
            // Se chegou aqui, s√£o dados antigos
            return vendas.map(venda => {
                const novoPagamento = {
                    tipo: venda.tipo,
                    valor: venda.valor
                };
                if (venda.tipo === 'Fiado') {
                    novoPagamento.clienteNome = venda.clienteNome;
                    novoPagamento.clienteTelefone = venda.clienteTelefone;
                    novoPagamento.transacaoId = venda.transacaoId; // Preserva o ID
                }
                return {
                    comanda: venda.comanda,
                    valorTotal: venda.valor, // Valor total √© o mesmo
                    data: venda.data,
                    transacaoId: venda.transacaoId,
                    pagamentos: [novoPagamento]
                };
            });
        };
        
        // Fun√ß√£o de migra√ß√£o (para dados antigos)
        const migrarEstruturaHistorico = (historico) => {
             for (const dataKey in historico) {
                const dia = historico[dataKey];
                if (dia.vendas && dia.vendas.length > 0 && !dia.vendas[0].hasOwnProperty('pagamentos')) {
                    // Precisa migrar
                    dia.vendas = migrarEstruturaVendas(dia.vendas);
                }
            }
            return historico;
        };

        const migrarEstruturaFiado = (dadosFiado) => {
            const fiadoMigrado = {};
            for (const chave in dadosFiado) {
                const dados = dadosFiado[chave];
                
                if (dados && typeof dados === 'object') {
                    const telLimpo = limparTelefone(dados.telefone || (chave.match(/^[0-9() -]+$/) ? chave : ''));
                    const chaveMigrada = telLimpo || chave; 

                    if (dados.hasOwnProperty('transacoes')) {
                        fiadoMigrado[chaveMigrada] = { ...dados, telefone: telLimpo };
                    } else if (dados.hasOwnProperty('divida')) {
                        fiadoMigrado[chaveMigrada] = {
                            nome: dados.nome || (telLimpo ? '(Sem Nome)' : chave),
                            telefone: telLimpo,
                            transacoes: [
                                { data: new Date().toISOString(), tipo: 'importado', valor: dados.divida, comanda: 'SALDO ANTERIOR' }
                            ]
                        };
                    }
                } else if (typeof dados === 'number') {
                    fiadoMigrado[chave] = {
                        nome: chave, 
                        telefone: '', 
                        transacoes: [
                             { data: new Date().toISOString(), tipo: 'importado', valor: dados, comanda: 'SALDO ANTERIOR' }
                        ]
                    };
                }
            }
            return fiadoMigrado;
        };
        
        const migrarClientesParaCadastro = (clientesFiado, cadastroClientes) => {
            let cadastroAtualizado = { ...cadastroClientes };
            let cadastroMudou = false;
            for (const telLimpo in clientesFiado) {
                if (telLimpo && !cadastroAtualizado[telLimpo]) { 
                    cadastroAtualizado[telLimpo] = {
                        nome: clientesFiado[telLimpo].nome || '(Sem Nome)',
                        telefone: telLimpo 
                    };
                    cadastroMudou = true;
                }
            }
            return { cadastro: cadastroAtualizado, mudou: cadastroMudou };
        };


        // --- Carregamento e Migra√ß√£o de Dados ---
        let vendasHojeBruto = JSON.parse(localStorage.getItem('vendasHoje')) || [];
        let vendasHoje = migrarEstruturaVendas(vendasHojeBruto); 
        
        let clientesFiadoBruto = JSON.parse(localStorage.getItem('clientesFiado')) || {};
        let clientesFiado = migrarEstruturaFiado(clientesFiadoBruto); 
        
        let cadastroClientes = JSON.parse(localStorage.getItem('cadastroClientes')) || {};
        
        const migracaoCadastro = migrarClientesParaCadastro(clientesFiado, cadastroClientes);
        if (migracaoCadastro.mudou) {
            cadastroClientes = migracaoCadastro.cadastro;
            localStorage.setItem('cadastroClientes', JSON.stringify(cadastroClientes));
        }

        let comandasHoje = JSON.parse(localStorage.getItem('comandasHoje')) || []; 
        
        let historicoVendasBruto = JSON.parse(localStorage.getItem('historicoVendas')) || {};
        let historicoVendas = migrarEstruturaHistorico(historicoVendasBruto);

        let pagamentosHoje = JSON.parse(localStorage.getItem('pagamentosHoje')) || []; 
        
        let configComandas = JSON.parse(localStorage.getItem('configComandas')) || { 
            inicioA: 0, finalA: 0, inicioB: 0, finalB: 0, trocoInicial: 0 
        }; 

        // Fun√ß√µes de formata√ß√£o e salvamento
        const formatarMoeda = (valor) => valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        const formatarData = (isoString) => new Date(isoString).toLocaleDateString('pt-BR');
        const formatarDataInput = (isoString) => isoString.split('T')[0];
        const formatarDataHora = (isoString) => new Date(isoString).toLocaleString('pt-BR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' });
        const formatarHora = (isoString) => new Date(isoString).toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' });
        
        const formatarTelefone = (numero) => {
            if (!numero) return '';
            const numLimpo = String(numero).replace(/\D/g, '');
            if (numLimpo.length === 11) return `(${numLimpo.substring(0, 2)}) ${numLimpo.substring(2, 7)}-${numLimpo.substring(7)}`;
            if (numLimpo.length === 10) return `(${numLimpo.substring(0, 2)}) ${numLimpo.substring(2, 6)}-${numLimpo.substring(6)}`;
            return numero;
        };
        
        const calcularDividaCliente = (chave) => {
            if (!clientesFiado[chave] || !clientesFiado[chave].transacoes) return 0;
            return clientesFiado[chave].transacoes.reduce((acc, t) => acc + t.valor, 0);
        };

        const salvarDados = () => {
            localStorage.setItem('vendasHoje', JSON.stringify(vendasHoje));
            localStorage.setItem('clientesFiado', JSON.stringify(clientesFiado));
            localStorage.setItem('comandasHoje', JSON.stringify(comandasHoje));
            localStorage.setItem('historicoVendas', JSON.stringify(historicoVendas));
            localStorage.setItem('pagamentosHoje', JSON.stringify(pagamentosHoje)); 
            localStorage.setItem('configComandas', JSON.stringify(configComandas)); 
            localStorage.setItem('cadastroClientes', JSON.stringify(cadastroClientes));
        };
        
        const arquivarVendasDoDia = () => {
            if (vendasHoje.length === 0 && pagamentosHoje.length === 0) return;
            const hoje = new Date();
            const chaveData = `${hoje.getFullYear()}-${String(hoje.getMonth() + 1).padStart(2, '0')}-${String(hoje.getDate()).padStart(2, '0')}`;
            
            const totais = vendasHoje.reduce((acc, venda) => {
                venda.pagamentos.forEach(pag => {
                    acc[pag.tipo] = (acc[pag.tipo] || 0) + pag.valor;
                });
                return acc;
            }, { 'Dinheiro': 0, 'Cart√£o': 0, 'Pix': 0, 'Fiado': 0 });

            const totalVendas = totais.Dinheiro + totais.Cart√£o + totais.Pix + totais.Fiado;

            historicoVendas[chaveData] = {
                data: hoje.toISOString(),
                resumo: { ...totais, total: totalVendas },
                vendas: [...vendasHoje],
                pagamentos: [...pagamentosHoje], 
                trocoInicial: configComandas.trocoInicial,
                intervaloComanda: { 
                    A_inicio: configComandas.inicioA, 
                    A_final: configComandas.finalA, 
                    B_inicio: configComandas.inicioB, 
                    B_final: configComandas.finalB 
                }
            };
        };
        
        const resetarDadosDoDia = () => {
            arquivarVendasDoDia();
            vendasHoje = [];
            comandasHoje = [];
            pagamentosHoje = []; 
            configComandas = { inicioA: 0, finalA: 0, inicioB: 0, finalB: 0, trocoInicial: 0 }; 
            
            inicioComandaAInput.value = ''; 
            finalComandaAInput.value = ''; 
            inicioComandaBInput.value = ''; 
            finalComandaBInput.value = ''; 
            
            trocoInicialInput.value = '';
            salvarDados();
            atualizarUI();
            setTimeout(() => {
                alert('Dia encerrado e arquivado com sucesso! Novo dia iniciado.');
                
                if (confirm("Dia finalizado! \n\nQue tal fazer um backup de seguran√ßa de todos os seus dados agora? \n\n√â r√°pido e garante que voc√™ n√£o perca nada.")) {
                    exportarDadosBtn.click();
                }
            }, 100); 
        }

        const limparHistoricoAntigo = () => {
            if (Object.keys(historicoVendas).length === 0) { alert('O hist√≥rico j√° est√° vazio.'); return; }
            historicoVendas = {};
            salvarDados();
            atualizarUI();
            alert('Hist√≥rico de vendas antigo foi permanentemente apagado! (A lista de contas a receber foi mantida).');
        }

        const ordenarComandas = (a, b) => {
            const tipoA = a.charAt(0); const tipoB = b.charAt(0);
            const numA = parseInt(a.substring(1)); const numB = parseInt(b.substring(1));
            if (tipoA < tipoB) return -1; if (tipoA > tipoB) return 1;
            return numA - numB;
        };

        const ordenarVendasPorComanda = (a, b) => {
            return ordenarComandas(a.comanda, b.comanda);
        };


        // --- L√ìGICA DE RENDERIZA√á√ÉO ---
        
        // Helper para exibir nome amig√°vel
        const getNomeTipoPagamento = (tipo) => {
            if (tipo === 'Fiado') return 'Pagamentos a Receber';
            return tipo;
        };

        const renderizarResumoDiario = () => {
            const totais = vendasHoje.reduce((acc, venda) => {
                venda.pagamentos.forEach(pag => {
                    acc[pag.tipo] = (acc[pag.tipo] || 0) + pag.valor;
                });
                return acc;
            }, { 'Dinheiro': 0, 'Cart√£o': 0, 'Pix': 0, 'Fiado': 0 });
            
            const totalVendas = totais.Dinheiro + totais.Cart√£o + totais.Pix + totais.Fiado;
            
            const totaisPagamentosFiado = pagamentosHoje.reduce((acc, pag) => {
                const tipo = pag.tipo || 'Dinheiro'; 
                if (tipo === 'Dinheiro') acc.dinheiro += pag.valor;
                else if (tipo === 'Cart√£o') acc.cartao += pag.valor;
                else if (tipo === 'Pix') acc.pix += pag.valor;
                acc.total += pag.valor;
                return acc;
            }, { dinheiro: 0, cartao: 0, pix: 0, total: 0 });

            const acumuladoDinheiro = totais.Dinheiro + totaisPagamentosFiado.dinheiro;
            const acumuladoCartao = totais.Cart√£o + totaisPagamentosFiado.cartao;
            const acumuladoPix = totais.Pix + totaisPagamentosFiado.pix;
            const acumuladoTotal = acumuladoDinheiro + acumuladoCartao + acumuladoPix;

            const totalDinheiroVendas = totais.Dinheiro;
            const totalDinheiroCaixa = (configComandas.trocoInicial || 0) + totalDinheiroVendas + totaisPagamentosFiado.dinheiro; 

            totalVendasHojeEl.textContent = formatarMoeda(totalVendas);
            totalDinheiroEl.textContent = formatarMoeda(totalDinheiroVendas);
            totalCartaoEl.textContent = formatarMoeda(totais.Cart√£o);
            totalPixEl.textContent = formatarMoeda(totais.Pix);
            totalFiadoHojeEl.textContent = formatarMoeda(totais.Fiado);
            
            totalPagamentosFiadoHojeEl.textContent = formatarMoeda(totaisPagamentosFiado.total);
            totalPagamentosFiadoDinheiroEl.textContent = formatarMoeda(totaisPagamentosFiado.dinheiro);
            totalPagamentosFiadoCartaoEl.textContent = formatarMoeda(totaisPagamentosFiado.cartao);
            totalPagamentosFiadoPixEl.textContent = formatarMoeda(totaisPagamentosFiado.pix);
            
            totalAcumuladoDinheiroEl.textContent = formatarMoeda(acumuladoDinheiro);
            totalAcumuladoCartaoEl.textContent = formatarMoeda(acumuladoCartao);
            totalAcumuladoPixEl.textContent = formatarMoeda(acumuladoPix);
            totalAcumuladoGeralEl.textContent = formatarMoeda(acumuladoTotal);
            
            totalCaixaDinheiroEl.textContent = formatarMoeda(totalDinheiroCaixa);
        };

        const renderizarClientesFiado = (termoBusca = '') => {
            listaClientesFiadoEl.innerHTML = '';
            const chavesClientes = Object.keys(clientesFiado); 
            let totalGeral = 0; let clientesAtivos = 0; 
            
            // Filtro de busca
            const termo = normalizarTexto(termoBusca);
            
            const clientesFiltrados = chavesClientes.filter(chave => {
                 const dividaObj = clientesFiado[chave];
                 const nome = normalizarTexto(dividaObj.nome);
                 const tel = normalizarTexto(dividaObj.telefone || chave);
                 return termo === '' || nome.includes(termo) || tel.includes(termo);
            });

            if (clientesFiltrados.length === 0) {
                 if (termo !== '') {
                      listaClientesFiadoEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente encontrado.</p>';
                 } else {
                     listaClientesFiadoEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente com d√©bito no momento.</p>';
                 }
                 // Calcula o total geral independente da busca para manter o topo correto
                 const totalReal = chavesClientes.reduce((acc, chave) => acc + calcularDividaCliente(chave), 0);
                 totalFiadoGeralEl.textContent = formatarMoeda(totalReal); 
                 return;
            }

            clientesFiltrados.sort((a, b) => {
                const nomeA = clientesFiado[a].nome || a; const nomeB = clientesFiado[b].nome || b;
                return nomeA.localeCompare(nomeB);
            }).forEach(chave => {
                const dividaObj = clientesFiado[chave];
                const dividaValor = calcularDividaCliente(chave);
                
                // Total sempre acumula, mas aqui mostramos s√≥ os filtrados na lista
                if (dividaValor < 0.01) { return; }
                
                clientesAtivos++;
                const clienteDiv = document.createElement('div');
                clienteDiv.className = 'border rounded-lg p-4 space-y-3';
                const nomeDisplay = dividaObj.nome || (dividaObj.telefone ? "(Sem Nome)" : chave);
                const telefoneDisplay = formatarTelefone(dividaObj.telefone);
                
                clienteDiv.innerHTML = `
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-lg font-semibold text-gray-800">${nomeDisplay}</p>
                                ${telefoneDisplay ? `<div class="flex items-center gap-2 text-sm text-gray-500 mt-1"><i data-lucide="phone" class="w-4 h-4"></i><span>${telefoneDisplay}</span></div>` : ''}
                            </div>
                            <div class="text-right">
                                <p class="text-lg font-bold text-red-600 flex-shrink-0">${formatarMoeda(dividaValor)}</p>
                                <button class="btn btn-outline-secondary mt-1 ver-historico-btn" data-cliente-chave="${chave}"><i data-lucide="history" class="w-3 h-3"></i>Ver Hist√≥rico</button>
                            </div>
                        </div>
                        <div class="flex flex-col sm:flex-row gap-2">
                            <input type="number" step="0.01" class="input-field flex-grow sm:w-1/3" placeholder="Ex: 20.00">
                            <select class="input-field flex-grow sm:w-1/3 pagamento-fiado-tipo">
                                <option value="Dinheiro" selected>Dinheiro</option>
                                <option value="Cart√£o">Cart√£o</option>
                                <option value="Pix">Pix</option>
                            </select>
                            <button class="btn btn-primary text-sm flex-shrink-0 sm:w-1/3 pagar-fiado-btn" data-cliente-chave="${chave}"><i data-lucide="check" class="w-4 h-4"></i>Receber</button>
                        </div>`;
                listaClientesFiadoEl.appendChild(clienteDiv);
            });
            
            // Recalcula total geral (sem filtro) para o header
            totalGeral = chavesClientes.reduce((acc, chave) => acc + calcularDividaCliente(chave), 0);
            totalFiadoGeralEl.textContent = formatarMoeda(totalGeral);
        };

        const renderizarCadastroClientes = (termoBusca = '') => {
            listaClientesCadastradosEl.innerHTML = '';
            const chavesClientes = Object.keys(cadastroClientes);

            const termo = normalizarTexto(termoBusca);

            const clientesFiltrados = chavesClientes.filter(chave => {
                 const cliente = cadastroClientes[chave];
                 const nome = normalizarTexto(cliente.nome);
                 const tel = normalizarTexto(cliente.telefone);
                 return termo === '' || nome.includes(termo) || tel.includes(termo);
            });

            if (clientesFiltrados.length === 0) {
                 if (termo !== '') {
                      listaClientesCadastradosEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente encontrado.</p>';
                 } else {
                     listaClientesCadastradosEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhum cliente cadastrado.</p>';
                 }
                return;
            }

            clientesFiltrados.sort((a, b) => {
                const nomeA = cadastroClientes[a].nome || a;
                const nomeB = cadastroClientes[b].nome || b;
                return nomeA.localeCompare(nomeB);
            }).forEach(chave => {
                const cliente = cadastroClientes[chave];
                const clienteDiv = document.createElement('div');
                clienteDiv.className = 'flex justify-between items-center p-2 rounded-md even:bg-gray-50';
                
                clienteDiv.innerHTML = `
                    <div>
                        <p class="font-semibold text-gray-800">${cliente.nome}</p>
                        <p class="text-sm text-gray-500">${formatarTelefone(cliente.telefone)}</p>
                    </div>
                    <div class="flex gap-2">
                        <button class="btn btn-outline-secondary text-xs ver-historico-cadastro-btn" data-cliente-chave="${chave}">
                            <i data-lucide="history" class="w-3 h-3"></i>Hist√≥rico
                        </button>
                        <button class="btn btn-outline-danger text-xs remover-cliente-cadastro-btn" data-cliente-chave="${chave}">
                            <i data-lucide="trash-2" class="w-3 h-3"></i>Remover
                        </button>
                    </div>
                `;
                listaClientesCadastradosEl.appendChild(clienteDiv);
            });
        };
        
        const renderizarDatalistClientes = () => {
            datalistNomesClientes.innerHTML = '';
            const clientes = Object.values(cadastroClientes);
            clientes.sort((a, b) => a.nome.localeCompare(b.nome));

            clientes.forEach(cliente => {
                const option = document.createElement('option');
                option.value = cliente.nome; 
                option.label = `Tel: ${formatarTelefone(cliente.telefone)}`; 
                datalistNomesClientes.appendChild(option);
            });
        };

        const renderizarVendasDoDia = () => {
            listaVendasHojeEl.innerHTML = '';
            comandasRegistradasEl.textContent = comandasHoje.length > 0 ? [...comandasHoje].sort(ordenarComandas).join(', ') : 'Nenhuma comanda registrada.';
            if (vendasHoje.length === 0) {
                listaVendasHojeEl.innerHTML = '<p class="text-center text-gray-500 py-4">Nenhuma venda registrada ainda.</p>'; return;
            }
            
            [...vendasHoje].sort(ordenarVendasPorComanda).forEach(venda => {
                const originalIndex = vendasHoje.findIndex(v => v.transacaoId === venda.transacaoId);
                const vendaDiv = document.createElement('div');
                vendaDiv.className = 'flex justify-between items-center p-2 rounded-md even:bg-gray-50';
                
                const pagamentosHtml = venda.pagamentos.map(p => {
                    let tipoPagamentoIcon = '';
                    // Exibi√ß√£o amig√°vel
                    const nomeTipo = getNomeTipoPagamento(p.tipo);
                    
                    switch(p.tipo) {
                        case 'Dinheiro': tipoPagamentoIcon = '<i data-lucide="dollar-sign" class="w-4 h-4 text-green-600"></i>'; break;
                        case 'Cart√£o': tipoPagamentoIcon = '<i data-lucide="credit-card" class="w-4 h-4 text-blue-600"></i>'; break;
                        case 'Pix': tipoPagamentoIcon = '<i data-lucide="smartphone" class="w-4 h-4 text-purple-600"></i>'; break;
                        case 'Fiado': tipoPagamentoIcon = '<i data-lucide="book-user" class="w-4 h-4 text-red-600"></i>'; break;
                    }
                    return `<span class="flex items-center gap-1 text-sm text-gray-500" title="${nomeTipo}: ${formatarMoeda(p.valor)}">${tipoPagamentoIcon} ${formatarMoeda(p.valor)}</span>`;
                }).join('');

                vendaDiv.innerHTML = `
                    <div class="flex flex-col gap-1 flex-grow">
                        <div class="flex items-center gap-3">
                             <span class="font-bold text-gray-700 w-10 text-center">${venda.comanda}</span>
                             <span class="font-semibold text-gray-800">${formatarMoeda(venda.valorTotal)}</span>
                        </div>
                        <div class="flex items-center gap-2 pl-12 flex-wrap">${pagamentosHtml}</div>
                    </div>
                    <button class="btn btn-outline-danger text-xs ml-2 flex-shrink-0" data-venda-index="${originalIndex}"><i data-lucide="trash-2" class="w-3 h-3"></i>Remover</button>
                    `;
                listaVendasHojeEl.appendChild(vendaDiv);
            });
        };

        const renderizarSeletorHistorico = () => {
            seletorData.innerHTML = '';
            relatorioContainer.innerHTML = '<p class="text-center text-gray-500 no-print">Selecione uma data para come√ßar.</p>';
            relatorioAcumuladoContainer.innerHTML = '';
            const datasSalvas = Object.keys(historicoVendas).sort().reverse();
            if (datasSalvas.length === 0) {
                seletorData.innerHTML = '<option>Nenhum relat√≥rio salvo</option>';
                const hoje = new Date();
                const primeiroDiaMes = new Date(hoje.getFullYear(), hoje.getMonth(), 1);
                dataInicioInput.value = formatarDataInput(primeiroDiaMes.toISOString());
                dataFimInput.value = formatarDataInput(hoje.toISOString());
                return;
            }
            seletorData.innerHTML = '<option value="">Selecione uma data</option>';
            datasSalvas.forEach(dataKey => {
                const option = document.createElement('option');
                option.value = dataKey;
                option.textContent = formatarData(historicoVendas[dataKey].data);
                seletorData.appendChild(option);
            });
            dataInicioInput.value = datasSalvas.length > 0 ? datasSalvas[datasSalvas.length - 1] : formatarDataInput(new Date().toISOString());
            dataFimInput.value = datasSalvas.length > 0 ? datasSalvas[0] : formatarDataInput(new Date().toISOString());
        };

        const mostrarRelatorio = (dataKey) => {
            relatorioAcumuladoContainer.innerHTML = '';
            if (!dataKey || !historicoVendas[dataKey]) {
                relatorioContainer.innerHTML = '<p class="text-center text-gray-500 no-print">Selecione uma data para come√ßar.</p>'; return;
            }
            const relatorio = historicoVendas[dataKey];
            const { resumo, vendas, pagamentos, trocoInicial } = relatorio; 
            
            let vendasHtml = vendas.sort(ordenarVendasPorComanda).map(venda => {
                
                const pagamentosHtml = venda.pagamentos.map(p => {
                    let clienteDisplay = '';
                    let fullTitle = '';
                    const nomeTipo = getNomeTipoPagamento(p.tipo);

                    if (p.tipo === 'Fiado') {
                        const telFormatado = formatarTelefone(p.clienteTelefone);
                        clienteDisplay = `(${p.clienteNome} / ${telFormatado})`;
                        fullTitle = `title="${nomeTipo} ${clienteDisplay}"`;
                    }
                    return `
                      <div class="flex justify-between text-sm text-gray-600">
                        <span>- ${nomeTipo}:</span>
                        <span class="truncate min-w-0" ${fullTitle}>${formatarMoeda(p.valor)} ${clienteDisplay}</span>
                      </div>
                    `;
                }).join('');

                return `
                  <li class="p-2 even:bg-gray-50 border-b">
                    <div class="flex justify-between items-center mb-1">
                      <span>Comanda <strong>#${venda.comanda}</strong></span>
                      <span class="font-semibold">${formatarMoeda(venda.valorTotal)}</span>
                    </div>
                    <div class="pl-4">${pagamentosHtml}</div>
                  </li>`;
            }).join('');
            if (vendas.length === 0) { vendasHtml = '<li class="text-center text-gray-500 p-2">Nenhuma venda registrada.</li>'; }
            
            const resumoPagamentos = (pagamentos || []).reduce((acc, pag) => {
                const tipo = pag.tipo || 'Dinheiro';
                acc[tipo] = (acc[tipo] || 0) + pag.valor;
                acc.total = (acc.total || 0) + pag.valor;
                return acc;
            }, { Dinheiro: 0, Cart√£o: 0, Pix: 0, total: 0 });

            let pagamentosHtmlDetalhes = '';
            if (pagamentos && pagamentos.length > 0) {
                pagamentos.sort((a, b) => new Date(a.data) - new Date(b.data));
                pagamentosHtmlDetalhes = pagamentos.map(pag => {
                    const tipoPagamento = pag.tipo || 'Dinheiro'; 
                    const telFormatado = pag.telefone ? `(${formatarTelefone(pag.telefone)})` : '';
                    const horaPagamento = formatarHora(pag.data);
                    
                    const nomeCliente = pag.cliente || '(Cliente n√£o identificado)';
                    const fullTitle = `${nomeCliente} ${telFormatado}`; 

                    return `
                    <li class="flex justify-between items-center p-2 even:bg-gray-50">
                        <div class="min-w-0"> 
                            <span class="truncate block" title="${fullTitle}"> 
                                <strong class="text-gray-800">${nomeCliente}</strong> ${telFormatado}
                            </span>
                            <span class="text-xs text-gray-500 block">${tipoPagamento} √†s ${horaPagamento}</span>
                        </div>
                        <span class="font-semibold text-green-600 flex-shrink-0 ml-4">${formatarMoeda(pag.valor)}</span>
                    </li>`;
                }).join('');
            } else { pagamentosHtmlDetalhes = '<li class="text-center text-gray-500 p-2">Nenhum pagamento recebido.</li>'; }
            
            const acumuladoDinheiro = (resumo.Dinheiro || 0) + (resumoPagamentos.Dinheiro || 0);
            const acumuladoCartao = (resumo.Cart√£o || 0) + (resumoPagamentos.Cart√£o || 0);
            const acumuladoPix = (resumo.Pix || 0) + (resumoPagamentos.Pix || 0);
            const acumuladoTotal = acumuladoDinheiro + acumuladoCartao + acumuladoPix;

            const totalDinheiroRelatorio = (trocoInicial || 0) + (resumo.Dinheiro || 0) + (resumoPagamentos.Dinheiro || 0);
            
            relatorioContainer.innerHTML = `
                <div class="space-y-4">
                    <h3 class="text-xl font-bold text-gray-800">Relat√≥rio de ${formatarData(relatorio.data)}</h3>
                    
                    <div>
                        <h4 class="text-lg font-semibold text-gray-700 mb-2">Vendas do Dia</h4>
                        <div class="space-y-2 pl-4 text-sm">
                            <div class="flex justify-between items-center"><p>Dinheiro:</p><p>${formatarMoeda(resumo.Dinheiro)}</p></div>
                            <div class="flex justify-between items-center"><p>Cart√£o:</p><p>${formatarMoeda(resumo.Cart√£o)}</p></div>
                            <div class="flex justify-between items-center"><p>Pix:</p><p>${formatarMoeda(resumo.Pix)}</p></div>
                            <div class="flex justify-between items-center text-red-600"><p>A Receber (Novas Vendas):</p><p>${formatarMoeda(resumo.Fiado)}</p></div>
                            <div class="flex justify-between items-center font-bold text-blue-600 border-t pt-1 mt-1 text-base"><p>Venda Total (Bruta):</p><p>${formatarMoeda(resumo.total)}</p></div>
                        </div>
                    </div>

                    <div class="border-t pt-3">
                        <h4 class="text-lg font-semibold text-gray-700 mb-2">Pgs outros dias</h4>
                        <div class="space-y-2 pl-4 text-sm">
                            <div class="flex justify-between items-center"><p>(Pgs) Dinheiro:</p><p>${formatarMoeda(resumoPagamentos.Dinheiro)}</p></div>
                            <div class="flex justify-between items-center"><p>(Pgs) Cart√£o:</p><p>${formatarMoeda(resumoPagamentos.Cart√£o)}</p></div>
                            <div class="flex justify-between items-center"><p>(Pgs) Pix:</p><p>${formatarMoeda(resumoPagamentos.Pix)}</p></div>
                            <div class="flex justify-between items-center font-bold text-green-600 border-t pt-1 mt-1 text-base"><p>Total Recebido:</p><p>${formatarMoeda(resumoPagamentos.total)}</p></div>
                        </div>
                    </div>

                    <div class="border-t pt-3">
                        <h4 class="text-lg font-semibold text-gray-700 mb-2">Valores Acumulados (Vendas + Pgs)</h4>
                        <div class="space-y-2 pl-4 text-sm">
                            <div class="flex justify-between items-center"><p>Dinheiro (Total):</p><p>${formatarMoeda(acumuladoDinheiro)}</p></div>
                            <div class="flex justify-between items-center"><p>Cart√£o (Total):</p><p>${formatarMoeda(acumuladoCartao)}</p></div>
                            <div class="flex justify-between items-center"><p>Pix (Total):</p><p>${formatarMoeda(acumuladoPix)}</p></div>
                            <div class="flex justify-between items-center font-bold text-gray-900 border-t pt-1 mt-1 text-base"><p>Total Recebido (Dia):</p><p>${formatarMoeda(acumuladoTotal)}</p></div>
                        </div>
                    </div>

                    <div class="border-t pt-3 no-print">
                        <h4 class="font-semibold mb-2">Detalhes das Vendas (${vendas.length} registros):</h4>
                        <ul class="space-y-1 max-h-40 overflow-y-auto pr-2 text-sm">${vendasHtml}</ul>
                    </div>
                    
                    <div class="border-t pt-3 no-print">
                        <h4 class="font-semibold mb-2">Detalhes Pgs outros dias (${pagamentos ? pagamentos.length : 0} registros):</h4>
                        <ul class="space-y-1 max-h-40 overflow-y-auto pr-2 text-sm">${pagamentosHtmlDetalhes}</ul>
                    </div>
                    
                    <button id="imprimirBtn" class="btn btn-success w-full mt-4 no-print"><i data-lucide="printer"></i>Imprimir Relat√≥rio</button>
                </div>
            `;
            lucide.createIcons();
        };

        const mostrarRelatorioAcumulado = () => {
            relatorioContainer.innerHTML = '<p class="text-center text-gray-500 no-print">Selecione uma data para come√ßar.</p>';
            seletorData.value = '';
            const dataInicio = dataInicioInput.value; const dataFim = dataFimInput.value;
            if (!dataInicio || !dataFim) { alert('Por favor, selecione data de in√≠cio e fim.'); return; }
            const dataInicioObj = new Date(dataInicio + 'T00:00:00'); const dataFimObj = new Date(dataFim + 'T23:59:59');
            if (dataFimObj < dataInicioObj) { alert('A data final n√£o pode ser anterior √† data inicial.'); return; }
            
            const totaisAcumulados = { 
                vendaBruta: 0, trocoInicialTotal: 0, dinheiro: 0, cartao: 0, pix: 0, fiado: 0, 
                pagamentosFiado: 0, 
                pagamentosFiadoDinheiro: 0,
                pagamentosFiadoCartao: 0,
                pagamentosFiadoPix: 0,
                diasContados: 0 
            };

            for (const dataKey in historicoVendas) {
                const relatorio = historicoVendas[dataKey];
                const dataRelatorio = new Date(relatorio.data);
                if (dataRelatorio >= dataInicioObj && dataRelatorio <= dataFimObj) {
                    totaisAcumulados.diasContados++;
                    totaisAcumulados.vendaBruta += relatorio.resumo.total || 0;
                    totaisAcumulados.trocoInicialTotal += relatorio.trocoInicial || 0;
                    totaisAcumulados.dinheiro += relatorio.resumo.Dinheiro || 0;
                    totaisAcumulados.cartao += relatorio.resumo.Cart√£o || 0;
                    totaisAcumulados.pix += relatorio.resumo.Pix || 0;
                    totaisAcumulados.fiado += relatorio.resumo.Fiado || 0;
                    
                    if (relatorio.pagamentos && relatorio.pagamentos.length > 0) {
                        relatorio.pagamentos.forEach(pag => {
                            const tipo = pag.tipo || 'Dinheiro';
                            const valor = pag.valor || 0;
                            totaisAcumulados.pagamentosFiado += valor;
                            if (tipo === 'Dinheiro') totaisAcumulados.pagamentosFiadoDinheiro += valor;
                            else if (tipo === 'Cart√£o') totaisAcumulados.pagamentosFiadoCartao += valor;
                            else if (tipo === 'Pix') totaisAcumulados.pagamentosFiadoPix += valor;
                        });
                    }
                }
            }
            if (totaisAcumulados.diasContados === 0) {
                 relatorioAcumuladoContainer.innerHTML = `<div class="border rounded-lg p-4 bg-gray-50 text-center text-gray-600">Nenhum relat√≥rio encontrado no per√≠odo de ${formatarData(dataInicioObj.toISOString())} at√© ${formatarData(dataFimObj.toISOString())}.</div>`;
                 return;
            }
            
            const acumuladoDinheiro = totaisAcumulados.dinheiro + totaisAcumulados.pagamentosFiadoDinheiro;
            const acumuladoCartao = totaisAcumulados.cartao + totaisAcumulados.pagamentosFiadoCartao;
            const acumuladoPix = totaisAcumulados.pix + totaisAcumulados.pagamentosFiadoPix;
            const acumuladoTotal = acumuladoDinheiro + acumuladoCartao + acumuladoPix;
            
            const totalDinheiroGerado = totaisAcumulados.trocoInicialTotal + totaisAcumulados.dinheiro + totaisAcumulados.pagamentosFiadoDinheiro;
            
            relatorioAcumuladoContainer.innerHTML = `
                <div class="border-t pt-4 space-y-4">
                    <h3 class="text-xl font-bold text-gray-800">Relat√≥rio Acumulado</h3>
                    <p class="text-sm text-gray-500 -mt-3 mb-3">De ${formatarData(dataInicioObj.toISOString())} at√© ${formatarData(dataFimObj.toISOString())} (${totaisAcumulados.diasContados} dias)</p>
                    
                    <div>
                        <h4 class="text-lg font-semibold text-gray-700 mb-2">Vendas do Per√≠odo</h4>
                        <div class="space-y-2 pl-4 text-sm">
                            <div class="flex justify-between items-center"><p>Dinheiro (Vendas):</p><p>${formatarMoeda(totaisAcumulados.dinheiro)}</p></div>
                            <div class="flex justify-between items-center"><p>Cart√£o:</p><p>${formatarMoeda(totaisAcumulados.cartao)}</p></div>
                            <div class="flex justify-between items-center"><p>Pix:</p><p>${formatarMoeda(totaisAcumulados.pix)}</p></div>
                            <div class="flex justify-between items-center text-red-600"><p>A Receber (Novas Vendas):</p><p>${formatarMoeda(totaisAcumulados.fiado)}</p></div>
                            <div class="flex justify-between items-center font-bold text-blue-600 border-t pt-1 mt-1 text-base"><p>Venda Total (Bruta):</p><p>${formatarMoeda(totaisAcumulados.vendaBruta)}</p></div>
                        </div>
                    </div>

                    <div class="border-t pt-3">
                        <h4 class="text-lg font-semibold text-gray-700 mb-2">Pgs outros dias</h4>
                        <div class="space-y-2 pl-4 text-sm">
                            <div class="flex justify-between items-center"><p>(Pgs) Dinheiro:</p><p>${formatarMoeda(totaisAcumulados.pagamentosFiadoDinheiro)}</p></div>
                            <div class="flex justify-between items-center"><p>(Pgs) Cart√£o:</p><p>${formatarMoeda(totaisAcumulados.pagamentosFiadoCartao)}</p></div>
                            <div class="flex justify-between items-center"><p>(Pgs) Pix:</p><p>${formatarMoeda(totaisAcumulados.pagamentosFiadoPix)}</p></div>
                            <div class="flex justify-between items-center font-bold text-green-600 border-t pt-1 mt-1 text-base"><p>Total Recebido:</p><p>${formatarMoeda(totaisAcumulados.pagamentosFiado)}</p></div>
                        </div>
                    </div>

                    <div class="border-t pt-3">
                        <h4 class="text-lg font-semibold text-gray-700 mb-2">Valores Acumulados (Vendas + Pgs)</h4>
                        <div class="space-y-2 pl-4 text-sm">
                            <div class="flex justify-between items-center"><p>Dinheiro (Total):</p><p>${formatarMoeda(acumuladoDinheiro)}</p></div>
                            <div class="flex justify-between items-center"><p>Cart√£o (Total):</p><p>${formatarMoeda(acumuladoCartao)}</p></div>
                            <div class="flex justify-between items-center"><p>Pix (Total):</p><p>${formatarMoeda(acumuladoPix)}</p></div>
                            <div class="flex justify-between items-center font-bold text-gray-900 border-t pt-1 mt-1 text-base"><p>Total Recebido (Per√≠odo):</p><p>${formatarMoeda(acumuladoTotal)}</p></div>
                        </div>
                    </div>
                </div>
            `;
        };
        
        const mostrarHistoricoFiado = (chaveCliente) => {
            const cliente = clientesFiado[chaveCliente]; if (!cliente) return;
            const nomeDisplay = cliente.nome || formatarTelefone(cliente.telefone) || chaveCliente;
            historicoFiadoModalTitulo.textContent = `Hist√≥rico de: ${nomeDisplay}`;
            historicoFiadoModalConteudo.innerHTML = ''; 
            let saldoCorrente = 0;
            const transacoesHtml = cliente.transacoes
                .sort((a, b) => new Date(a.data) - new Date(b.data))
                .map(t => {
                    saldoCorrente += t.valor;
                    let descricao = ''; let valorClasse = '';
                    if (t.tipo === 'compra') { descricao = `Compra (Comanda #${t.comanda})`; valorClasse = 'text-red-600'; }
                    else if (t.tipo === 'pagamento') { 
                        const formaPag = t.forma || 'Dinheiro'; 
                        descricao = `Pagamento (${formaPag})`; 
                        valorClasse = 'text-green-600'; 
                    }
                    else if (t.tipo === 'importado') { descricao = 'Saldo Anterior (Importado)'; valorClasse = 'text-gray-600'; }
                    return `
                    <li class="flex justify-between items-center p-3 border-b">
                        <div><p class="font-semibold">${descricao}</p><p class="text-sm text-gray-500">${formatarDataHora(t.data)}</p></div>
                        <div class="text-right"><p class="font-bold ${valorClasse}">${formatarMoeda(t.valor)}</p><p class="text-sm text-gray-600">Saldo Devedor: ${formatarMoeda(saldoCorrente)}</p></div>
                    </li>`;
                }).join('');
            historicoFiadoModalConteudo.innerHTML = `<ul class="space-y-1">${transacoesHtml}</ul>`;
            historicoFiadoModal.style.display = 'flex';
            lucide.createIcons();
        };

        const atualizarUI = () => {
            renderizarResumoDiario();
            renderizarClientesFiado();
            renderizarCadastroClientes();
            renderizarDatalistClientes();
            renderizarVendasDoDia();
            renderizarSeletorHistorico();
            trocoInicialInput.value = configComandas.trocoInicial > 0 ? configComandas.trocoInicial : '';
            inicioComandaAInput.value = configComandas.inicioA > 0 ? configComandas.inicioA : '';
            finalComandaAInput.value = configComandas.finalA > 0 ? configComandas.finalA : '';
            inicioComandaBInput.value = configComandas.inicioB > 0 ? configComandas.inicioB : '';
            finalComandaBInput.value = configComandas.finalB > 0 ? configComandas.finalB : '';
            lucide.createIcons();
        };

        // --- L√ìGICA DE EVENTOS ---
        
        // NOVO: Evento da Barra de Busca Global
        buscadorGlobal.addEventListener('input', (e) => {
            const termo = e.target.value;
            renderizarClientesFiado(termo);
            renderizarCadastroClientes(termo);
        });

        // NOVO: Fun√ß√£o para alternar os modos do formul√°rio
        const toggleFormMode = (toDistribuido) => {
            isModoDistribuido = toDistribuido;
            
            // Alterna a visibilidade dos blocos
            formPagamentoSimples.classList.toggle('hidden', toDistribuido);
            formPagamentoDistribuido.classList.toggle('hidden', !toDistribuido);
            
            // Oculta o campo de cliente (ser√° reexibido se necess√°rio)
            campoClienteFiado.classList.add('hidden');
            
            // Limpa todos os inputs de valor e status
            valorVendaInput.value = '';
            valorVendaTotalInput.value = '';
            valorDinheiroInput.value = '';
            valorCartaoInput.value = '';
            valorPixInput.value = '';
            valorFiadoInput.value = '';
            nomeClienteFiadoInput.value = '';
            telefoneClienteFiadoInput.value = '';
            statusDistribuicaoEl.textContent = '';
            totalDistribuidoEl.textContent = formatarMoeda(0);
            faltandoEl.textContent = formatarMoeda(0);

            // Alterna quais inputs s√£o obrigat√≥rios
            valorVendaInput.required = !toDistribuido;
            valorVendaTotalInput.required = toDistribuido;
            nomeClienteFiadoInput.required = false; // Ser√° definido pelos listeners
            telefoneClienteFiadoInput.required = false; // Ser√° definido pelos listeners
        };

        // NOVO: Listeners para os bot√µes de altern√¢ncia
        toggleDistribuicaoBtn.addEventListener('click', () => toggleFormMode(true));
        toggleSimplesBtn.addEventListener('click', () => toggleFormMode(false));


        // NOVO: Listener para o formul√°rio de Venda (h√≠brido)
        vendaForm.addEventListener('submit', (e) => {
            e.preventDefault();

            // 1. Obter Comanda (L√≥gica compartilhada)
            const numA = parseInt(numeroComandaAInput.value); 
            const numB = parseInt(numeroComandaBInput.value);
            let tipoComanda, numeroComanda;
            if (!isNaN(numA) && numA > 0) { tipoComanda = 'A'; numeroComanda = numA; }
            else if (!isNaN(numB) && numB > 0) { tipoComanda = 'B'; numeroComanda = numB; }
            else { alert('Por favor, insira um n√∫mero de comanda v√°lido (A ou B).'); return; }
            
            const comandaId = tipoComanda + numeroComanda;
            const transacaoId = new Date().toISOString(); 

            // 2. Valida√ß√£o de Comanda (L√≥gica compartilhada)
            if(comandasHoje.includes(comandaId)) { 
                alert(`A comanda de n√∫mero ${comandaId} j√° foi registrada hoje.`); 
                return; 
            }

            // --- Vari√°veis para armazenar os dados ---
            let pagamentos = [];
            let valorTotalVenda;
            let nomeCliente = '';
            let telefoneCliente = '';

            if (isModoDistribuido) {
                // --- L√ìGICA DO MODO DISTRIBU√çDO ---
                valorTotalVenda = parseFloat(valorVendaTotalInput.value) || 0;
                if (valorTotalVenda <= 0) {
                      alert('Por favor, insira um Valor Total v√°lido.');
                      valorVendaTotalInput.focus();
                      return;
                }
                
                const valorDinheiro = parseFloat(valorDinheiroInput.value) || 0;
                const valorCartao = parseFloat(valorCartaoInput.value) || 0;
                const valorPix = parseFloat(valorPixInput.value) || 0;
                const valorFiado = parseFloat(valorFiadoInput.value) || 0;

                const totalDistribuido = valorDinheiro + valorCartao + valorPix + valorFiado;

                if (Math.abs(valorTotalVenda - totalDistribuido) > 0.001) {
                    alert(`Erro: O total distribu√≠do (${formatarMoeda(totalDistribuido)}) n√£o bate com o Valor Total (${formatarMoeda(valorTotalVenda)}).`);
                    statusDistribuicaoEl.textContent = 'Valores n√£o batem!';
                    return;
                }
                
                if (valorFiado > 0) {
                    nomeCliente = nomeClienteFiadoInput.value.trim();
                    telefoneCliente = limparTelefone(telefoneClienteFiadoInput.value.trim());
                    if (!telefoneCliente || !nomeCliente) {
                         alert('Nome e Telefone s√£o obrigat√≥rios para pagamentos a receber.');
                         return;
                    }
                }
                
                // Construir array de pagamentos
                if (valorDinheiro > 0) pagamentos.push({ tipo: 'Dinheiro', valor: valorDinheiro });
                if (valorCartao > 0) pagamentos.push({ tipo: 'Cart√£o', valor: valorCartao });
                if (valorPix > 0) pagamentos.push({ tipo: 'Pix', valor: valorPix });
                if (valorFiado > 0) {
                    pagamentos.push({ tipo: 'Fiado', valor: valorFiado, clienteNome: nomeCliente, clienteTelefone: telefoneCliente, transacaoId: transacaoId });
                }

            } else {
                // --- L√ìGICA DO MODO SIMPLES ---
                valorTotalVenda = parseFloat(valorVendaInput.value) || 0;
                 if (valorTotalVenda <= 0) {
                      alert('Por favor, insira um Valor v√°lido.');
                      valorVendaInput.focus();
                      return;
                }
                
                const tipoPagamento = document.querySelector('input[name="tipoPagamento"]:checked').value;
                
                if (tipoPagamento === 'Fiado') {
                    nomeCliente = nomeClienteFiadoInput.value.trim();
                    telefoneCliente = limparTelefone(telefoneClienteFiadoInput.value.trim());
                    if (!telefoneCliente || !nomeCliente) {
                         alert('Nome e Telefone s√£o obrigat√≥rios para pagamentos a receber.');
                         return;
                    }
                    pagamentos.push({ tipo: 'Fiado', valor: valorTotalVenda, clienteNome: nomeCliente, clienteTelefone: telefoneCliente, transacaoId: transacaoId });
                } else {
                    pagamentos.push({ tipo: tipoPagamento, valor: valorTotalVenda });
                }
            }

            // --- L√ìGICA COMPARTILHADA DE SALVAMENTO ---

            // Atualiza o sistema de Fiado (se um pagamento fiado existir)
            const pagFiado = pagamentos.find(p => p.tipo === 'Fiado');
            if (pagFiado) {
                const chaveCliente = pagFiado.clienteTelefone;
                
                if (!clientesFiado[chaveCliente]) {
                    clientesFiado[chaveCliente] = { nome: pagFiado.clienteNome, telefone: chaveCliente, transacoes: [] };
                }
                clientesFiado[chaveCliente].nome = pagFiado.clienteNome; // Garante que o nome est√° atualizado
                
                clientesFiado[chaveCliente].transacoes.push({
                    data: transacaoId, 
                    tipo: 'compra', 
                    valor: pagFiado.valor, 
                    comanda: comandaId, 
                    transacaoId: transacaoId 
                });
                
                if (!cadastroClientes[chaveCliente] || cadastroClientes[chaveCliente].nome !== pagFiado.clienteNome) {
                      cadastroClientes[chaveCliente] = { nome: pagFiado.clienteNome, telefone: chaveCliente };
                }
            }

            // Criar o objeto da Venda Principal
            const novaVenda = {
                comanda: comandaId,
                valorTotal: valorTotalVenda,
                data: transacaoId,
                transacaoId: transacaoId,
                pagamentos: pagamentos
            };

            // Salvar e Limpar
            vendasHoje.push(novaVenda);
            comandasHoje.push(comandaId); 
            salvarDados();
            atualizarUI();
            
            // Limpa o formul√°rio e reseta para o modo simples
            vendaForm.reset();
            toggleFormMode(false); // For√ßa volta ao modo simples
            numeroComandaAInput.value = ''; 
            numeroComandaBInput.value = '';
            numeroComandaAInput.disabled = false; 
            numeroComandaBInput.disabled = false;
            numeroComandaAInput.focus();
        });

        // NOVO: Listener para os inputs de valor (Modo Distribu√≠do)
        const inputsValorDist = [valorVendaTotalInput, valorDinheiroInput, valorCartaoInput, valorPixInput, valorFiadoInput];
        inputsValorDist.forEach(input => {
            input.addEventListener('input', () => {
                if (!isModoDistribuido) return; // S√≥ execute se estiver no modo distribu√≠do

                const valorTotal = parseFloat(valorVendaTotalInput.value) || 0;
                const valorDinheiro = parseFloat(valorDinheiroInput.value) || 0;
                const valorCartao = parseFloat(valorCartaoInput.value) || 0;
                const valorPix = parseFloat(valorPixInput.value) || 0;
                const valorFiado = parseFloat(valorFiadoInput.value) || 0;

                const totalDistribuido = valorDinheiro + valorCartao + valorPix + valorFiado;
                const valorFaltando = valorTotal - totalDistribuido;

                totalDistribuidoEl.textContent = formatarMoeda(totalDistribuido);
                faltandoEl.textContent = formatarMoeda(valorFaltando);

                if (Math.abs(valorFaltando) < 0.001 && valorTotal > 0) {
                    statusDistribuicaoEl.textContent = 'Valores batem!';
                    statusDistribuicaoEl.classList.remove('text-red-600');
                    statusDistribuicaoEl.classList.add('text-green-600');
                } else {
                    statusDistribuicaoEl.textContent = 'Valores n√£o batem!';
                    statusDistribuicaoEl.classList.add('text-red-600');
                    statusDistribuicaoEl.classList.remove('text-green-600');
                }

                // Mostrar/ocultar campo de cliente fiado
                const isFiado = valorFiado > 0;
                campoClienteFiado.classList.toggle('hidden', !isFiado);
                nomeClienteFiadoInput.required = isFiado; 
                telefoneClienteFiadoInput.required = isFiado;
            });
        });

        // NOVO: Listener para os radios (Modo Simples)
        tipoPagamentoRadios.forEach(radio => radio.addEventListener('change', () => {
            if (isModoDistribuido) return; // S√≥ execute se estiver no modo simples

            const isFiado = radio.value === 'Fiado';
            campoClienteFiado.classList.toggle('hidden', !isFiado);
            nomeClienteFiadoInput.required = isFiado; 
            telefoneClienteFiadoInput.required = isFiado;
        }));
        
        numeroComandaAInput.addEventListener('input', () => {
            numeroComandaBInput.disabled = !!numeroComandaAInput.value;
        });
        numeroComandaBInput.addEventListener('input', () => {
            numeroComandaAInput.disabled = !!numeroComandaBInput.value;
        });

        // Evento de input no NOME do fiado (Sem mudan√ßas)
        nomeClienteFiadoInput.addEventListener('input', (e) => {
            const nomeDigitado = e.target.value.trim();
            const clienteEncontrado = Object.values(cadastroClientes).find(
                cliente => cliente.nome.toLowerCase() === nomeDigitado.toLowerCase()
            );

            if (clienteEncontrado) {
                // 2. Se encontrou, preenche o telefone
                telefoneClienteFiadoInput.value = formatarTelefone(clienteEncontrado.telefone);
            } else {
                // 3. Se o nome for parcial ou n√£o existir, limpa o telefone
                telefoneClienteFiadoInput.value = '';
            }
        });
        
        // Evento para o formul√°rio de cadastro de clientes (Sem mudan√ßas)
        addClienteForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const nome = nomeClienteCadastroInput.value.trim();
            const telefoneBruto = telefoneClienteCadastroInput.value.trim();
            const telefoneLimpo = limparTelefone(telefoneBruto);

            if (!nome || !telefoneLimpo) {
                alert('Nome e Telefone s√£o obrigat√≥rios para o cadastro.');
                return;
            }
            if (cadastroClientes[telefoneLimpo]) {
                alert('Um cliente com este n√∫mero de telefone j√° existe no cadastro.');
                return;
            }
            cadastroClientes[telefoneLimpo] = { nome: nome, telefone: telefoneLimpo };
            salvarDados();
            atualizarUI();
            addClienteForm.reset();
            alert('Cliente adicionado ao cadastro!');
        });
        
        // Listener do Cadastro de Clientes (Sem mudan√ßas)
        listaClientesCadastradosEl.addEventListener('click', (e) => {
            const target = e.target.closest('button'); 
            if (!target) return;
            const clienteChave = target.dataset.clienteChave;
            if (target.classList.contains('remover-cliente-cadastro-btn')) {
                const clienteNome = cadastroClientes[clienteChave]?.nome || 'Cliente';
                if (confirm(`Tem certeza que deseja remover "${clienteNome}" do seu cadastro de clientes?\n\n(Aten√ß√£o: Isso N√ÉO afeta o hist√≥rico de d√≠vidas dele na "Gest√£o de Pagamentos a Receber".)`)) {
                    delete cadastroClientes[clienteChave];
                    salvarDados();
                    atualizarUI();
                }
            } else if (target.classList.contains('ver-historico-cadastro-btn')) {
                if (clientesFiado[clienteChave]) {
                    mostrarHistoricoFiado(clienteChave);
                } else {
                    alert('Este cliente est√° no cadastro, mas n√£o possui hist√≥rico de d√©bitos.');
                }
            }
        });

        // Listener da Gest√£o de Fiado (CORRIGIDO)
        listaClientesFiadoEl.addEventListener('click', (e) => {
            const target = e.target.closest('button');
            if (!target) return;
            
            // --- CORRE√á√ÉO AQUI ---
            // A vari√°vel √© movida para o topo do listener
            const clienteChave = target.dataset.clienteChave; 
            // ---------------------
            
            if (target.classList.contains('ver-historico-btn')) {
                // A defini√ß√£o duplicada foi removida daqui
                mostrarHistoricoFiado(clienteChave); 
                return;
            }

            if (target.classList.contains('pagar-fiado-btn')) {
                const container = target.closest('.flex-col');
                const inputValor = container.querySelector('input[type="number"]');
                const selectTipo = container.querySelector('.pagamento-fiado-tipo');
                
                let valorPago = parseFloat(inputValor.value);
                const tipoPagamento = selectTipo.value;
                
                // Agora 'clienteChave' est√° definida e esta linha funciona
                const dividaAtual = calcularDividaCliente(clienteChave); 
                const nomeParaRelatorio = clientesFiado[clienteChave].nome || clienteChave;

                if (isNaN(valorPago) || valorPago <= 0) {
                    if (confirm(`Nenhum valor inserido. Deseja QUITAR o saldo total de ${formatarMoeda(dividaAtual)} para "${nomeParaRelatorio}"?`)) {
                        valorPago = dividaAtual;
                    } else {
                        return;
                    }
                }
                
                if (valorPago < 0.01) { alert('Valor de pagamento inv√°lido.'); return; }
                
                if (valorPago >= (dividaAtual - 0.001)) { 
                    if (confirm(`O valor de ${formatarMoeda(valorPago)} √© igual ou maior que a d√≠vida (${formatarMoeda(dividaAtual)}). Deseja quitar a d√≠vida e zerar o saldo?`)) {
                        valorPago = dividaAtual; 
                    } else {
                        return; 
                    }
                }

                const telefoneCliente = clientesFiado[clienteChave].telefone || (clienteChave.match(/^[0-9() -]+$/) ? clienteChave : '');
                const dataPagamento = new Date().toISOString();
                
                pagamentosHoje.push({ 
                    cliente: nomeParaRelatorio, 
                    telefone: telefoneCliente, 
                    valor: valorPago, 
                    tipo: tipoPagamento, 
                    data: dataPagamento 
                });
                
                clientesFiado[clienteChave].transacoes.push({ 
                    data: dataPagamento, 
                    tipo: 'pagamento', 
                    valor: -valorPago,
                    forma: tipoPagamento 
                });
                salvarDados(); 
                atualizarUI();
                inputValor.value = ''; 
            }
        });

        // ATUALIZADO para nova estrutura
        listaVendasHojeEl.addEventListener('click', (e) => {
            const target = e.target.closest('button.btn-outline-danger'); 
            if (!target) return;
            
            const index = parseInt(target.dataset.vendaIndex);
            const vendaParaRemover = vendasHoje[index];
            
            if (confirm(`Remover a venda da comanda N¬∫ ${vendaParaRemover.comanda} (Valor: ${formatarMoeda(vendaParaRemover.valorTotal)})?`)) {
                
                const fiadoPayment = vendaParaRemover.pagamentos.find(p => p.tipo === 'Fiado');
                
                if (fiadoPayment && fiadoPayment.clienteTelefone) {
                    const clienteChave = fiadoPayment.clienteTelefone; 
                    
                    if (clientesFiado[clienteChave] && clientesFiado[clienteChave].transacoes) {
                        clientesFiado[clienteChave].transacoes = clientesFiado[clienteChave].transacoes.filter(
                            t => t.transacaoId !== vendaParaRemover.transacaoId 
                        );
                    }
                }
                
                comandasHoje = comandasHoje.filter(c => c !== vendaParaRemover.comanda); 
                vendasHoje.splice(index, 1);
                
                salvarDados();
                atualizarUI();
            }
        });
        
        // Eventos de Hist√≥rico (Sem mudan√ßas)
        seletorData.addEventListener('change', (e) => mostrarRelatorio(e.target.value));
        calcularPeriodoBtn.addEventListener('click', mostrarRelatorioAcumulado);
        relatorioContainer.addEventListener('click', (e) => {
            const target = e.target.closest('#imprimirBtn');
            if (target) window.print();
        });

        // Evento de Salvar Configura√ß√£o (Sem mudan√ßas)
        salvarConfigComandasBtn.addEventListener('click', () => {
            configComandas.inicioA = parseInt(inicioComandaAInput.value) || 0;
            configComandas.finalA = parseInt(finalComandaAInput.value) || 0;
            configComandas.inicioB = parseInt(inicioComandaBInput.value) || 0;
            configComandas.finalB = parseInt(finalComandaBInput.value) || 0;
            configComandas.trocoInicial = parseFloat(trocoInicialInput.value) || 0;
            
            if ((configComandas.finalA > 0 && configComandas.finalA < configComandas.inicioA) || 
                (configComandas.finalB > 0 && configComandas.finalB < configComandas.inicioB)) {
                alert('Erro: O n√∫mero final da comanda n√£o pode ser menor que o n√∫mero inicial.');
                return;
            }

            salvarDados();
            alert('Intervalos de comandas e valor inicial salvos para o dia!');
            atualizarUI();
        });

        // Evento de Encerrar Dia (Sem mudan√ßas)
        resetarDiaBtn.addEventListener('click', () => {
            if (vendasHoje.length === 0 && pagamentosHoje.length === 0) {
                if(confirm('Nenhuma venda ou pagamento registrado. Deseja iniciar um novo dia mesmo assim?')) resetarDadosDoDia();
                return;
            }

            const { inicioA, finalA, inicioB, finalB } = configComandas;

            if ((finalA > 0 && inicioA === 0) || (finalA === 0 && inicioA > 0)) {
                alert('Por favor, preencha o In√≠cio e o Final para as comandas Amarelas, ou deixe ambos em 0.');
                return;
            }
             if ((finalB > 0 && inicioB === 0) || (finalB === 0 && inicioB > 0)) {
                alert('Por favor, preencha o In√≠cio e o Final para as comandas Brancas, ou deixe ambos em 0.');
                return;
            }
            if (finalA > 0 && finalA < inicioA) { alert('Erro: A comanda Amarela final √© menor que a inicial.'); return; }
            if (finalB > 0 && finalB < inicioB) { alert('Erro: A comanda Branca final √© menor que a inicial.'); return; }

            const registradasA = new Set(comandasHoje.filter(c => c.startsWith('A')).map(c => parseInt(c.substring(1))));
            const registradasB = new Set(comandasHoje.filter(c => c.startsWith('B')).map(c => parseInt(c.substring(1))));

            const faltandoA = [];
            const extrasA = [];
            if (finalA > 0) { 
                for (let i = inicioA; i <= finalA; i++) {
                    if (!registradasA.has(i)) faltandoA.push(`A${i}`);
                }
                registradasA.forEach(num => {
                    if (num < inicioA || num > finalA) extrasA.push(`A${num}`);
                });
            } else if (registradasA.size > 0) { 
                registradasA.forEach(num => extrasA.push(`A${num} (n√£o esperada)`));
            }

            const faltandoB = [];
            const extrasB = [];
             if (finalB > 0) { 
                for (let i = inicioB; i <= finalB; i++) {
                    if (!registradasB.has(i)) faltandoB.push(`B${i}`);
                }
                registradasB.forEach(num => {
                    if (num < inicioB || num > finalB) extrasB.push(`B${num}`);
                });
            } else if (registradasB.size > 0) { 
                registradasB.forEach(num => extrasB.push(`B${num} (n√£o esperada)`));
            }

            let mensagensErro = [];
            if (faltandoA.length > 0) mensagensErro.push(`Faltando Amarelas: ${faltandoA.join(', ')}`);
            if (extrasA.length > 0) mensagensErro.push(`Extras Amarelas: ${extrasA.join(', ')}`);
            if (faltandoB.length > 0) mensagensErro.push(`Faltando Brancas: ${faltandoB.join(', ')}`);
            if (extrasB.length > 0) mensagensErro.push(`Extras Brancas: ${extrasB.join(', ')}`);

            if (mensagensErro.length > 0) {
                senhaModalMensagem.textContent = `Inconsist√™ncias nas comandas: ${mensagensErro.join('; ')}. Digite a senha para for√ßar o encerramento.`;
                acaoPendenteComSenha = resetarDadosDoDia; 
                senhaModal.style.display = 'flex';
                senhaInput.focus();
            } else {
                if (confirm('A sequ√™ncia de comandas (baseado no intervalo configurado) est√° correta. Deseja encerrar e arquivar o dia?')) {
                    resetarDadosDoDia();
                }
            }
        });
        
        // Modal de Senha (Sem mudan√ßas)
        cancelarSenhaBtn.addEventListener('click', () => {
            senhaModal.style.display = 'none';
            acaoPendenteComSenha = null; 
            senhaInput.value = ''; 
        });

        confirmarSenhaBtn.addEventListener('click', () => {
            if (senhaInput.value === SENHA_ADMIN) {
                senhaModal.style.display = 'none';
                senhaInput.value = '';
                if (typeof acaoPendenteComSenha === 'function') { acaoPendenteComSenha(); }
                acaoPendenteComSenha = null; 
            } else { alert('Senha incorreta!'); }
        });

        // Modal Hist√≥rico (Sem mudan√ßas)
        historicoFiadoModalClose.addEventListener('click', () => {
            historicoFiadoModal.style.display = 'none';
        });
        
        // Backup e Restore (Sem mudan√ßas)
        exportarDadosBtn.addEventListener('click', () => {
            const backupData = {
                historico: historicoVendas,
                fiado: clientesFiado,
                cadastro: cadastroClientes
            };
            
            if (Object.keys(historicoVendas).length === 0 && Object.keys(clientesFiado).length === 0 && Object.keys(cadastroClientes).length === 0) {
                alert('N√£o h√° dados para exportar.');
                return;
            }
            
            const dataStr = JSON.stringify(backupData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'backup_pensao_completo.json';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
            alert('Backup exportado com sucesso!');
        });
        
        importarBtn.addEventListener('click', () => {
            importarDadosInput.click();
        });

        importarDadosInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (event) => {
                try {
                    const dadosImportados = JSON.parse(event.target.result);
                    
                    if (dadosImportados && typeof dadosImportados === 'object' && 
                        (dadosImportados.hasOwnProperty('historico') || dadosImportados.hasOwnProperty('fiado') || dadosImportados.hasOwnProperty('cadastro'))) {
                        
                        if (confirm('Deseja substituir seus dados por este backup? (Os dados do dia atual n√£o ser√£o afetados)')) {
                            
                            historicoVendas = migrarEstruturaHistorico(dadosImportados.historico || historicoVendas);
                            clientesFiado = migrarEstruturaFiado(dadosImportados.fiado || clientesFiado);
                            cadastroClientes = dadosImportados.cadastro || cadastroClientes; 
                            
                            const migracaoPosImport = migrarClientesParaCadastro(clientesFiado, cadastroClientes);
                            cadastroClientes = migracaoPosImport.cadastro;

                            salvarDados();
                            atualizarUI();
                            alert('Backup importado com sucesso!');
                        }
                    } else {
                        alert('Arquivo de backup inv√°lido ou corrompido.');
                    }
                } catch (error) {
                    console.error('Erro ao importar backup:', error);
                    alert('Ocorreu um erro ao ler o arquivo de backup.');
                } finally {
                    e.target.value = null;
                }
            };
            reader.readAsText(file);
        });

        limparHistoricoBtn.addEventListener('click', () => {
            senhaModalMensagem.innerHTML = '<strong>Aten√ß√£o!</strong> Esta a√ß√£o vai apagar <strong>PERMANENTEMENTE</strong> todo o hist√≥rico de relat√≥rios salvos.<br><br>Recomenda-se exportar um backup primeiro. Digite a senha para confirmar.';
            acaoPendenteComSenha = limparHistoricoAntigo; 
            senhaModal.style.display = 'flex';
            senhaInput.focus();
        });

        // Inicializa√ß√£o da aplica√ß√£o
        document.addEventListener('DOMContentLoaded', () => {
            salvarDados(); 
            atualizarUI();
            
            // Define o estado inicial do formul√°rio
            toggleFormMode(false); 
            
            window.addEventListener('click', (event) => {
                if (event.target == senhaModal) {
                    senhaModal.style.display = 'none';
                    acaoPendenteComSenha = null; 
                    senhaInput.value = ''; 
                }
                if (event.target == historicoFiadoModal) {
                    historicoFiadoModal.style.display = 'none';
                }
            });
        });
    </script>
    </body>
</html>